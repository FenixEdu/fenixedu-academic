<?xml version="1.0" encoding="UTF-8" ?>
<!--<!DOCTYPE form-validation PUBLIC 
      "-//Apache Software Foundation//DTD Struts Validation Configuration 1.1//EN"
      "http://jakarta.apache.org/struts/dtds/validation_1_1.dtd">-->

<form-validation>
  <formset>
    <!-- validation for the authentication form -->
    <form name="authenticationForm">
      <field property="username" depends="required">
        <arg0 key="candidate.username" />
      </field>

      <field property="password" depends="required">
        <arg0 key="candidate.password" />
      </field>
    </form>
    

    <!-- validation for the Change Application Info Form-->
    <form name="changeApplicationInfoForm">
      
      <field property="name" depends="required">
        <arg0 key="candidate.name" />
      </field>
      
      <field property="password" depends="required">
        <arg0 key="candidate.password" />
      </field>
      
       <field property="majorDegree" depends="required">
        <arg0 key="candidate.majorDegree" />
      </field>
      
      <field property="majorDegreeYear" depends="required,integer,range">
        <arg0 key="candidate.majorDegreeYear" />
        <arg1 key="${var:min}" resource="false"/>
        <arg2 key="${var:max}" resource="false"/>        
        <var>
          <var-name>min</var-name>
          <var-value>1900</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>2100</var-value>
        </var>
      </field>
      
      <field property="majorDegreeSchool" depends="required">
        <arg0 key="candidate.majorDegreeSchool" />
      </field>
      
      <field property="fatherName" depends="required">
        <arg0 key="candidate.fatherName" />
      </field>
      
      <field property="motherName" depends="required">
        <arg0 key="candidate.motherName" />
      </field>
      
      <field property="birthPlaceParish" depends="required">
        <arg0 key="candidate.birthPlaceParish" />
      </field>
      
      <field property="birthPlaceMunicipality" depends="required">
        <arg0 key="candidate.birthPlaceMunicipality" />
      </field>
      
      <field property="birthPlaceDistrict" depends="required">
        <arg0 key="candidate.birthPlaceDistrict" />
      </field>
      
      <field property="identificationDocumentNumber" depends="required,integer">
        <arg0 key="candidate.identificationDocumentNumber" />
      </field>
      
      <field property="identificationDocumentIssuePlace" depends="required">
        <arg0 key="candidate.identificationDocumentIssuePlace" />
      </field>
      
      <field property="address" depends="required">
        <arg0 key="candidate.address" />
      </field>
      
      <field property="place" depends="required">
        <arg0 key="candidate.place" />
      </field>
      
      <field property="postCode" depends="required">
        <arg0 key="candidate.postCode" />
      </field>
      
      <field property="addressParish" depends="required">
        <arg0 key="candidate.addressParish" />
      </field>
      
      <field property="addressMunicipality" depends="required">
        <arg0 key="candidate.addressMunicipality" />
      </field>
      
      <field property="addressDistrict" depends="required">
        <arg0 key="candidate.addressDistrict" />
      </field>
      
      <field property="telephone" depends="required,integer">
        <arg0 key="candidate.telephone" />
      </field>
      
      <field property="mobilePhone" depends="required,integer">
        <arg0 key="candidate.mobilePhone" />
      </field>
      
      <field property="email" depends="email">
        <arg0 key="Este" resource="false" />
      </field>

      <field property="contributorNumber" depends="required,integer">
        <arg0 key="candidate.contributorNumber" />
      </field>
	
      <field property="occupation" depends="required">
        <arg0 key="candidate.occupation" />
      </field>
	
      <field property="birthDay" depends="required,integer,range">
        <arg0 key="candidate.day"/>
        <arg1 key="${var:min}" resource="false"/>
        <arg2 key="${var:max}" resource="false"/>        
        <var>
          <var-name>min</var-name>
          <var-value>1</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>31</var-value>
        </var>
      </field>

      <field property="birthMonth" depends="required,integer,range">
        <arg0 key="candidate.month"/> 
        <arg1 key="Janeiro" resource="false"/>
        <arg2 key="Dezembro" resource="false"/>        
        <var>
          <var-name>min</var-name>
          <var-value>0</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>11</var-value>
        </var>
      </field>

      <field property="birthYear" depends="required,integer,range">
        <arg0 key="candidate.year"/>
        <arg1 key="1900" resource="false"/>
        <arg2 key="2100" resource="false"/>        
        <var>
          <var-name>min</var-name>
          <var-value>1900</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>2100</var-value>
        </var>
      </field>

      <field property="idIssueDateDay" depends="required,integer,range">
        <arg0 key="candidate.day"/>
        <arg1 key="${var:min}" resource="false"/>
        <arg2 key="${var:max}" resource="false"/>        
        <var>
          <var-name>min</var-name>
          <var-value>1</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>31</var-value>
        </var>
      </field>

      <field property="idIssueDateMonth" depends="required,integer,range">
        <arg0 key="candidate.month"/>
        <arg1 key="Janeiro" resource="false"/>
        <arg2 key="Dezembro" resource="false"/>        
        <var>
          <var-name>min</var-name>
          <var-value>0</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>11</var-value>
        </var>
      </field>

      <field property="idIssueDateYear" depends="required,integer,range">
        <arg0 key="candidate.year"/>
        <arg1 key="1900" resource="false"/>
        <arg2 key="2100" resource="false"/>        
        <var>
          <var-name>min</var-name>
          <var-value>1900</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>2100</var-value>
        </var>
      </field>

    </form>


  </formset>
</form-validation>
