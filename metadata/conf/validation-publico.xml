<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE form-validation SYSTEM "file:///validation_1_1.dtd"> 
<form-validation>
  <formset>

    <!-- Validation for Index Form -->
    <form name="indexForm">
      <field property="index" depends="required">
        <arg0 key="Index" resource="false"/>
      </field>
    </form>
    
  <!-- Validation for chooseSearchContextForm Form -->
    <form name="chooseSearchContextForm">
      <field property="degreeInitials" depends="required" page="1">
        <arg0 key="licenciatura" resource="false"/>
      </field>
      <field property="curricularYear" depends="required, integer" page="1">
        <arg0 key="ano curricular" resource="false"/>
      </field>
      <field property="semester" depends="required, integer" page="1">
        <arg0 key="semestre" resource="false"/>
      </field>
    </form>

    <!-- Validation for Room Form -->
    <form name="roomForm">
      <field property="name" depends="">
        <arg0 key="Name" resource="false"/>
      </field>

      <field property="building" depends="">
        <arg0 key="Building" resource="false"/>
      </field>

      <field property="floor" depends="integer">
        <arg0 key="Floor" resource="false"/>
      </field>
      
      <field property="type" depends="range">
        <arg0 key="Type" resource="false"/>
        <arg1 key="${var:min}" resource="false"/>
        <arg2 key="${var:max}" resource="false"/>        
        <var>
          <var-name>min</var-name>
          <var-value>1</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>3</var-value>
        </var>
      </field>

      <field property="capacityNormal" depends="integer,range">
        <arg0 key="CapacityNormal" resource="false"/>
        <arg1 key="${var:min}" resource="false"/>
        <arg2 key="${var:max}" resource="false"/>
        <var>
          <var-name>min</var-name>
          <var-value>1</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>1000</var-value>
        </var>
      </field>

      <field property="capacityExame" depends="integer,range">
        <arg0 key="CapacityExame" resource="false"/>
        <arg1 key="${var:min}" resource="false"/>
        <arg2 key="${var:max}" resource="false"/>
        <var>
          <var-name>min</var-name>
          <var-value>1</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>1000</var-value>
        </var>
      </field>
    </form>

  </formset>
</form-validation>