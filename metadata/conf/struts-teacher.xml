   	 <forward name="logoff" path="/logoff.do" contextRelative="true"/>
    </global-forwards>

	<!-- ========== Action Mapping Definitions =============================== -->
	<action-mappings type="org.apache.struts.action.ActionMapping">
   
   
	<!-- for editing -->
	<action     path="/bibliographicReferenceManager"
				parameter="method"      			
				scope="session"
      			name="bibliographicReferenceForm"
                type="ServidorApresentacao.Action.teacher.TeacherAdministrationViewerDispatchAction"            
                validate="true"
        		className="ServidorApresentacao.mapping.SiteManagementActionMapping">		
				<set-property property="componentClassName" value="DataBeans.InfoSiteBibliography"/>
				<set-property property="inputForwardName" value="editErrorValidation"/>

				<forward name="editErrorValidation" path="/bibliographicReferenceManager.do?method=prepareEditBibliographicReference&amp;page=0"/>				

				<forward name="insertBibliographicReference" path="/createBibliographicReference.do"/>
				<forward name="editBibliographicReference" path="/editBibliographicReference.jsp"/>
				<forward name="bibliographyManagement" path="/bibliographyManagement.jsp"/>
	</action>             

	<!-- for create -->
	<action     path="/createBibliographicReference"
				parameter="method"      			
				scope="session"
      			name="bibliographicReferenceForm"
                type="ServidorApresentacao.Action.teacher.TeacherAdministrationViewerDispatchAction"            
                validate="true"
        		className="ServidorApresentacao.mapping.SiteManagementActionMapping">		
				<set-property property="componentClassName" value="DataBeans.InfoSiteBibliography"/>
				<set-property property="inputForwardName" value="insertBibliographicReference"/>
				
				<forward name="insertBibliographicReference" path="/insertBibliographicReference.jsp"/>
				<forward name="editBibliographicReference" path="/editBibliographicReference.jsp"/>
				<forward name="bibliographyManagement" path="/bibliographyManagement.jsp"/>
	</action>             
	
	<action     path="/alternativeSite"   
				parameter="method"   			
				scope="session"
      			name="alternativeSiteForm"
      			input="/alternativeSite.do?method=prepareCustomizationOptions&amp;page=0"
                type="ServidorApresentacao.Action.teacher.TeacherAdministrationViewerDispatchAction"            
                validate="true">	           
				<forward name="editAlternativeSite" path="/alternativeSiteManagement.jsp"/>	
				<forward name="viewSite" path="/viewSite.jsp"/>	
							
	</action>             
	
	<!-- input of actions for announcement management -->	
	<action name="insertAnnouncementForm"
		type="ServidorApresentacao.Action.teacher.TeacherAdministrationViewerDispatchAction"
