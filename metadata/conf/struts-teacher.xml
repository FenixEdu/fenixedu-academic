		parameter="method"      			
        path="/announcementManagementAction" 
		validate="true"
        className="ServidorApresentacao.mapping.SiteManagementActionMapping">		
			<set-property property="componentClassName" value="DataBeans.InfoSiteAnnouncement"/>
			<set-property property="inputForwardName" value="insertAnnouncement"/>
		
		<forward name="showAnnouncements" path="/announcementManagement.jsp" />
        <forward name="insertAnnouncement" path="/insertAnnouncement.jsp" />
        <forward name="editAnnouncement" path="/editAnnouncement.jsp" />
		
	</action>

	<action name="insertAnnouncementForm"
		type="ServidorApresentacao.Action.teacher.TeacherAdministrationViewerDispatchAction"
		scope="session"
		parameter="method"      			
        path="/editAnnouncement" 
        input="/editAnnouncement.jsp"
		validate="true"        
		className="ServidorApresentacao.mapping.SiteManagementActionMapping">		
			<set-property property="componentClassName" value="DataBeans.InfoAnnouncement"/>
			<set-property property="inputForwardName" value="editAnnouncement"/>

	        <forward name="editAnnouncement" path="/editAnnouncement.jsp" />
        	<forward name="showAnnouncements" path="/announcementManagement.jsp" />
	</action>

	
	
	<action path="/switchAction" type="org.apache.struts.actions.SwitchAction"/>
