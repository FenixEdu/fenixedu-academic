<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE struts-config PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
	"http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
    <!-- ========== Data Source Configuration =============================== -->
    
    <!-- ========== Form Bean Definitions ================================== -->
    <form-beans type="org.apache.struts.action.ActionFormBean">		
		<form-bean name="changeLocaleForm"
				type="org.apache.struts.validator.DynaValidatorForm"
				dynamic="true">
	   		<form-property name="windowLocation" type="java.lang.String"/>
	   		<form-property name="newLanguage" type="java.lang.String"/>
	   		<form-property name="newCountry" type="java.lang.String"/>
   			<form-property name="newVariant" type="java.lang.String"/>
		</form-bean>
    </form-beans>

    <!-- ========== Global Exception Definitions ============================== -->
	<global-exceptions>
        <exception
			type="java.lang.Exception"
			key="error.Exception"
            handler="net.sourceforge.fenixedu.presentationTier.config.FenixContainerExceptionHandler"
			/>
		<exception
			type="net.sourceforge.fenixedu.applicationTier.Servico.exceptions.NotAuthorizedException"
			key="error.NotAuthorized"
			handler="net.sourceforge.fenixedu.presentationTier.config.FenixContainerExceptionHandler"
			/>
	</global-exceptions>

    <!-- ========== Global Forward Definitions =============================== -->
    <global-forwards type="org.apache.struts.action.ActionForward">
    </global-forwards>
    
    <!-- ========== Action Mapping Definitions =============================== -->
    <action-mappings type="org.apache.struts.action.ActionMapping">
        <action path="/index" type="net.sourceforge.fenixedu.presentationTier.Action.commons.VoidAction">
            <forward name="Success" path="/viewCurriculum.do?method=prepare"/>
        </action>       
    
        <action path="/viewCurriculum" parameter="method" type="net.sourceforge.fenixedu.presentationTier.Action.research.ViewCurriculumDispatchAction">
            <forward name="Success" path="viewCurriculum"/>
        </action>
        
   		<!--  INTERESTS  -->
        
        <action path="/interests/interestsManagement"
                parameter="method" 
                type="net.sourceforge.fenixedu.presentationTier.Action.research.interest.InterestsManagementDispatchAction">
	        <forward name="EditInterest" path="interests.edit.interest"/>
		    <forward name="Success" path="interests.interestsManagement"/>
		    <forward name="InsertNewInterest" path="interests.insert.interest"/>
		</action>

		<!--  PROJECTS  -->

        <action path="/projects/projectsManagement" parameter="method" type="net.sourceforge.fenixedu.presentationTier.Action.research.project.ProjectsManagementDispatchAction">
		    <forward name="Success" path="projects.projectsManagement"/>
		</action>
        
		<action path="/projects/viewProject"
				type="net.sourceforge.fenixedu.presentationTier.Action.research.project.ViewProjectDispatchAction"
				scope="request"
				parameter="method">
			<forward name="ViewProject" path="projects.viewProject"/>
		</action>

		<action path="/projects/createProject"
				type="net.sourceforge.fenixedu.presentationTier.Action.research.project.CreateProjectDispatchAction"
				scope="request"
				parameter="method">
			<forward name="CreateProject" path="projects.createProject"/>
		    <forward name="Success" path="projects.projectsManagement"/>
		</action>

		<action path="/projects/editProject"
				type="net.sourceforge.fenixedu.presentationTier.Action.research.project.EditProjectDispatchAction"
				scope="request"
				parameter="method">
			<forward name="EditProjectData" path="projects.editProjectData"/>
			<forward name="EditProjectParticipants" path="projects.editProjectParticipants"/>
			<forward name="EditProjectEventAssociations" path="projects.editProjectEventAssociations"/>
			<forward name="EditProjectParticipantUnits" path="projects.editProjectParticipantUnits"/>
		</action>
		
		<!--  EVENTS  -->
		<action path="/events/eventsManagement" parameter="method" type="net.sourceforge.fenixedu.presentationTier.Action.research.event.EventsManagementDispatchAction">
		    <forward name="Success" path="events.eventsManagement"/>
		</action>
		
		<action path="/events/viewEvent"
				type="net.sourceforge.fenixedu.presentationTier.Action.research.event.ViewEventDispatchAction"
				scope="request"
				parameter="method">
			<forward name="ViewEvent" path="events.viewEvent"/>
		</action>

		<action path="/events/createEvent"
				type="net.sourceforge.fenixedu.presentationTier.Action.research.event.CreateEventDispatchAction"
				scope="request"
				parameter="method">
			<forward name="CreateEvent" path="events.createEvent"/>
		    <forward name="Success" path="/events/eventsManagement.do?method=listEvents"/>
		</action>

		<action path="/events/editEvent"
				type="net.sourceforge.fenixedu.presentationTier.Action.research.event.EditEventDispatchAction"
				scope="request"
				parameter="method">
			<forward name="EditEventData" path="events.editEventData"/>
			<forward name="EditEventParticipants" path="events.editEventParticipants"/>
			<forward name="EditEventProjectAssociations" path="events.editEventProjectAssociations"/>
			<forward name="EditEventParticipantUnits" path="events.editEventParticipantUnits"/>
		</action>		
		
		<!-- Results Management -->
		<action path="/resultPublications/*" forward="/publications/management.do?method={1}"/>
		<action path="/bibtexManagement/*" forward="/publications/bibtexManagement.do?method={1}"/>
		<action path="/resultPatents/*" forward="/patents/management.do?method={1}"/>
		<action path="/resultParticipations/*" forward="/result/resultParticipationManagement.do?method={1}"/>		
		<action path="/resultDocumentFiles/*" forward="/result/resultDocumentFilesManagement.do?method={1}"/>
		<action path="/resultAssociations/*" forward="/result/resultAssociationsManagement.do?method={1}"/>

		<!-- Result Publications Management Action Mapping -->
		<action path="/publications/management"
	        	 parameter="method"
	        	 type="net.sourceforge.fenixedu.presentationTier.Action.research.result.publication.ResultPublicationsManagementDispatchAction">
		    <forward name="ListPublications" path="publications.publicationsManagement"/>
		    <forward name="ViewEditPublication" path="publications.viewEditPublication"/>
		    <forward name="PreparedToCreate" path="publications.createPublication"/>
		    <forward name="PreparedToEdit" path="publications.editPublicationData"/>
			<forward name="PreparedToDelete" path="publications.viewEditPublication"/>
		    <forward name="PublicationDeleted" path="/resultPublications/listPublications.do"/>
			<forward name="SearchPublication"  path="publications.search"/>
			<forward name="ShowResult" path="show-result-loggedin"/>
		</action>
		
		<!-- Bibtex Publications Management Action Mapping -->
		<action path="/publications/bibtexManagement"
	        	 parameter="method"
	        	 type="net.sourceforge.fenixedu.presentationTier.Action.research.result.publication.BibTexManagementDispatchAction">
		    <forward name="PublicationExportedToBibtex" path="/result/publications/bibtex/showPublicationBibtex.jsp"/>
		    <forward name="OpenBibtexFile" path="publications.openBibtexFile"/>
		    <forward name="ImportBibtex" path="publications.importBibtex"/>
		    <forward name="PublicationsManagement" path="/resultPublications/listPublications.do"/>
		</action>
		
		<!-- Result Publication Search Action  Mapping -->
			<action path="/publications/search"
	        	 parameter="method"
	        	 type="net.sourceforge.fenixedu.presentationTier.Action.research.result.publication.SearchPublicationsAction">
			<forward name="SearchPublication"  path="publications.search"/>
		</action>
				
        <!-- Result Patents Management Action Mapping -->
		<action path="/patents/management"
				parameter="method"
				type="net.sourceforge.fenixedu.presentationTier.Action.research.result.patents.ResultPatentsManagementAction">
		    <forward name="listPatents" path="patents.list"/>
		    <forward name="createPatent" path="patents.create"/>
   		    <forward name="editPatent" path="patents.edit"/>
   		    <forward name="editPatentData" path="patents.editData"/>
		    <forward name="deletePatent" path="patents.delete"/>
		    <forward name="patentDetails" path="patents.details"/>
		</action>

		<!-- Result Participation Management Action Mapping -->			
		<action path="/result/resultParticipationManagement"
				parameter="method"
				type="net.sourceforge.fenixedu.presentationTier.Action.research.result.ResultParticipationManagementAction">
			<forward name="editParticipation" path="result.participation"/>
			<forward name="editPatent" path="/resultPatents/showPatent.do"/>
			<forward name="viewEditPublication" path="/resultPublications/showPublication.do"/>
			<forward name="listPatents" path="/resultPatents/management.do"/>
			<forward name="ListPublications" path="/resultPublications/listPublications.do"/>
		</action>

		<!-- Result Document Files Management Action Mapping -->
		<action path="/result/resultDocumentFilesManagement"
				parameter="method"
				type="net.sourceforge.fenixedu.presentationTier.Action.research.result.ResultDocumentFilesManagementAction">
			<forward name="editDocumentFiles" path="result.documentFiles"/>
			<forward name="editPatent" path="/resultPatents/showPatent.do"/>
			<forward name="listPatents" path="/resultPatents/management.do"/>
			<forward name="viewEditPublication" path="/resultPublications/showPublication.do"/>
			<forward name="ListPublications" path="/resultPublications/listPublications.do"/>
		</action>

		<!-- Result Associations Management Action Mapping -->
		<action path="/result/resultAssociationsManagement"
				parameter="method"
				type="net.sourceforge.fenixedu.presentationTier.Action.research.result.ResultAssociationsManagementAction">
			<forward name="editUnitAssociations" path="result.unitAssociations"/>
			<forward name="editEventAssociations" path="result.eventAssociations"/>
			<forward name="editPatent" path="/resultPatents/showPatent.do"/>
			<forward name="listPatents" path="/resultPatents/management.do"/>
			<forward name="viewEditPublication" path="/resultPublications/showPublication.do"/>
			<forward name="ListPublications" path="/resultPublications/listPublications.do"/>
		</action>
	
		<action path="/changeLocaleTo"
	    		name="changeLocaleForm"
	    		validate="false"
	    		type="net.sourceforge.fenixedu.presentationTier.Action.research.ChangeLocale">
	    </action>
	
	</action-mappings>
    
    <!-- ========== Controller Configuration ================================ -->
    <controller processorClass="net.sourceforge.fenixedu.presentationTier.processor.FenixRequestProcessorWithTiles"/>
    
    <!-- ========== Message Resources Definitions ============================ -->
	<message-resources parameter="resources.GlobalResources" key="GLOBAL_RESOURCES" null="false"/>
	<message-resources parameter="resources.ResearcherResources" null="false"/>
	<message-resources parameter="resources.ResearcherResources" key="RESEARCHER_RESOURCES" null="false"/>
    <message-resources parameter="resources.ApplicationResources" key="APPLICATION_RESOURCES" null="false"/>
    <message-resources parameter="resources.DepartmentMemberResources" key="DEPARTMENT_MEMBER_RESOURCES" null="false"/>
    <!-- ========== Plug Ins Configuration ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" 
            value="/WEB-INF/validator-rules.xml,/WEB-INF/fenix-validator-rules.xml,/WEB-INF/conf/validation-researcher.xml"/>
    </plug-in>
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" 
            value="/WEB-INF/tiles/layouts/tiles-layout-definitions.xml,/WEB-INF/tiles/researcher/tiles-researcher-definitions.xml,/WEB-INF/tiles/researcher/tiles-researcher-pages-definitions.xml" />
        <set-property property="moduleAware" value="true" />
        <set-property property="definitions-parser-validate" value="true" />
    </plug-in>
</struts-config>
