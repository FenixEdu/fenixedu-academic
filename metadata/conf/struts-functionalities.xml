<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE struts-config PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
    "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
    
    <!-- ========== Global Exception Definitions ============================= -->
    
    <global-exceptions>
        <exception type="java.lang.Exception" key="error.Exception"
            handler="net.sourceforge.fenixedu.presentationTier.config.FenixContainerExceptionHandler"/>
    </global-exceptions>
    
    <!-- ========== Action Mapping Definitions =============================== -->
    
    <action-mappings>

        <action path="/error/*"     forward="functionalities.error.{1}"/>
    
        <action path="/toplevel/view"     forward="/private/module.do?method=viewTopLevel"/>
        <action path="/toplevel/organize" forward="/private/module.do?method=organize"/>
        <action path="/toplevel/upload"   forward="/private/module.do?method=uploadStructure"/>
        <action path="/module/*"          forward="/private/module.do?method={1}"/>
        <action path="/functionality/*"   forward="/private/functionality.do?method={1}"/>

        <action path="/filter/*"   forward="/private/filter.do?method={1}"/>

        <action path="/private/module" 
                type="net.sourceforge.fenixedu.presentationTier.Action.manager.functionalities.ModuleManagementAction" 
                parameter="method">
            <forward name="toplevel"        path="functionalities.toplevel.view"/>
            <forward name="view"            path="functionalities.module.view"/>
            <forward name="view.module"     path="functionalities.module.view"/>
            <forward name="edit"            path="functionalities.module.edit"/>
            <forward name="create"          path="functionalities.module.create"/>
            <forward name="create.toplevel" path="functionalities.module.create.toplevel"/>
            <forward name="upload"          path="functionalities.module.upload"/>
            <forward name="upload.toplevel" path="functionalities.module.upload.toplevel"/>
        </action>
        
        <action path="/private/functionality" 
                type="net.sourceforge.fenixedu.presentationTier.Action.manager.functionalities.FunctionalityManagementAction" 
                parameter="method">
            <forward name="toplevel"        path="functionalities.toplevel.view"/>
            <forward name="view"            path="functionalities.functionality.view"/>
            <forward name="view.module"     path="functionalities.module.view"/>
            <forward name="edit"            path="functionalities.functionality.edit"/>
            <forward name="create"          path="functionalities.functionality.create"/>
            <forward name="create.toplevel" path="functionalities.functionality.create.toplevel"/>
            <forward name="manage"          path="functionalities.functionality.manage"/>
            <forward name="confirm"         path="functionalities.functionality.delete.confirm"/>
        </action>

        <action path="/private/filter"
                type="net.sourceforge.fenixedu.presentationTier.Action.manager.functionalities.TestFilterAction"
                parameter="method">
            <forward name="index"   path="functionalities.filter.index"/>
            <forward name="results" path="functionalities.filter.results"/>
        </action>

        <action path="/groupLanguage"
                type="net.sourceforge.fenixedu.presentationTier.Action.manager.functionalities.GroupLanguageAction">
            <forward name="show" path="functionalities.groupLanguage.show"/>
        </action>

    </action-mappings>
    
    <!-- ========== Controller Configuration ================================= -->
    
    <controller processorClass="net.sourceforge.fenixedu.presentationTier.processor.FenixRequestProcessorWithTiles"/>
    
    <!-- ========== Message Resources Definitions ============================ -->
    
    <message-resources parameter="resources.FunctionalityResources" key="FUNCTIONALITY_RESOURCES" null="false"/>
    <message-resources parameter="resources.GlobalResources" key="GLOBAL_RESOURCES" null="false"/>
    <message-resources parameter="resources.EnumerationResources" key="ENUMERATION_RESOURCES" null="false"/>
    
    <!-- ========== Plug Ins Configuration =================================== -->
    
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config"
                      value="/WEB-INF/tiles/layouts/tiles-layout-definitions.xml,/WEB-INF/tiles/manager/functionalities/tiles-functionalities-definitions.xml,/WEB-INF/tiles/manager/functionalities/tiles-functionalities-pages-definitions.xml" />
        <set-property property="moduleAware" value="true" />
        <set-property property="definitions-parser-validate" value="true" />
    </plug-in>
    
</struts-config>