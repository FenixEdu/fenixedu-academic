<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC       
	  "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
      "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
    <!-- ========== Data Source Configuration =============================== -->
    <data-sources />

	<!-- ========== Form Bean Definitions ================================== -->
	<form-beans type="org.apache.struts.action.ActionFormBean">
		<form-bean name="moneyCostCenterFormBean"
				type="org.apache.struts.validator.DynaValidatorForm"
                dynamic="true">
				<form-property name="page" type="java.lang.Integer" initial="0"/>
				<form-property name="year" type="java.lang.Integer" />    
				<form-property name="size" type="java.lang.Integer" />        
		</form-bean>
		<form-bean name="workByEmployeeFormBean"
				type="org.apache.struts.validator.DynaValidatorForm"
                dynamic="true">
				<form-property name="page" type="java.lang.Integer" initial="0"/>
				<form-property name="beginDate" type="java.lang.String" />
				<form-property name="endDate" type="java.lang.String" />    
				<form-property name="employeeNumber" type="java.lang.Integer" />  
		</form-bean>
		<form-bean name="extraWorkByEmployeeFormBean"
				type="org.apache.struts.validator.DynaValidatorForm"
                dynamic="true">
				<form-property name="page" type="java.lang.Integer" initial="0"/>
				<form-property name="moth" type="java.lang.Integer" />
				<form-property name="year" type="java.lang.Integer" />    
				<form-property name="employeeNumber" type="java.lang.Integer" /> 
				<form-property name="compensation" type="java.lang.String" />      
				<form-property name="size" type="java.lang.Integer" />      
		</form-bean>
		<form-bean name="requestsExtraWorkFormBean"
				type="org.apache.struts.validator.DynaValidatorForm"
                dynamic="true">
				<form-property name="page" type="java.lang.Integer" initial="0"/>
				<form-property name="beginDate" type="java.lang.String" />
				<form-property name="endDate" type="java.lang.String" />    
				<form-property name="cc" type="java.lang.String" />    
				<form-property name="ccMoney" type="java.lang.String" />   
				<form-property name="size" type="java.lang.Integer" />  
				<form-property name="todo" type="java.lang.String" />  
		</form-bean>
	</form-beans>
	
	<!-- ========== Global Forward Definitions =============================== -->
	<global-forwards type="org.apache.struts.action.ActionForward"/>      
	<!-- ========== Action Mapping Definitions =============================== -->      		  
	<action-mappings type="org.apache.struts.action.ActionMapping">
		<action path="/index" 
	      		  type="net.sourceforge.fenixedu.presentationTier.Action.base.FenixForwardAction" 
	      		  forward="managementAssiduousnessWelcome"/>
		<action path="/extraWork" 
	      		  type="net.sourceforge.fenixedu.presentationTier.Action.base.FenixForwardAction" 
	      		  forward="managementAssiduousnessWelcome.extraWork"/>
		<action path="/managementMoneyCostCenter" 
	      		type="net.sourceforge.fenixedu.presentationTier.Action.managementAssiduousness.ManagementMoneyCostCenterAction" 
				name="moneyCostCenterFormBean"
				parameter="method"
				scope="request"
				validate="true">
			<forward name="inputYear" path="managementAssiduousnessWelcome.extraWork.inputYear"/>
			<forward name="showMoneyCostCenterList" path="managementAssiduousnessWelcome.extraWork.moneyCostCenterList"/>
		</action>	
		<action path="/workByEmployee" 
	      		type="net.sourceforge.fenixedu.presentationTier.Action.managementAssiduousness.WorkByEmployeeAction" 
				name="workByEmployeeFormBean"
				parameter="method"
				scope="request"
				validate="true">
				<forward name="inputDateAndEmployee" path="managementAssiduousnessWelcome.work.employee.input"/>
				<forward name="workSheet" path="managementAssiduousnessWelcome.work.employee.sheet"/>
		</action>
		<action path="/extraWorkByEmployee" 
	      		type="net.sourceforge.fenixedu.presentationTier.Action.managementAssiduousness.ExtraWorkByEmployeeAction" 
				name="extraWorkByEmployeeFormBean"
				parameter="method"
				scope="request"
				validate="true">
				<forward name="inputDateAndEmployee" path="managementAssiduousnessWelcome.extraWork.employee.input"/>
				<forward name="extraWorkSheet" path="managementAssiduousnessWelcome.extraWork.employee.sheet"/>
		</action>	
		<action path="/requestsExtraWork" 
	      		type="net.sourceforge.fenixedu.presentationTier.Action.managementAssiduousness.RequestsExtraWorkAction" 
				name="requestsExtraWorkFormBean"
				parameter="method"
				scope="request"
				validate="true"
				input="/index.do">
				<forward name="inputs" path="managementAssiduousnessWelcome.extraWork.requests.inputs"/>
				<forward name="inputResquets" path="managementAssiduousnessWelcome.extraWork.requests.prepare"/>
				<forward name="requestsExtraWorkConfirmation" path="managementAssiduousnessWelcome.extraWork.requests.confirmation"/>
		</action>
		<action path="/requestsExtraWorkManagement" 
	      		type="net.sourceforge.fenixedu.presentationTier.Action.managementAssiduousness.RequestsExtraWorkAction" 
				name="requestsExtraWorkFormBean"
				parameter="method"
				scope="request"
				validate="true"
				input="/requestsExtraWork.do?method=prepareInputs">
				<forward name="inputs" path="managementAssiduousnessWelcome.extraWork.requests.inputs"/>
				<forward name="inputResquets" path="managementAssiduousnessWelcome.extraWork.requests.prepare"/>
				<forward name="requestsExtraWorkConfirmation" path="managementAssiduousnessWelcome.extraWork.requests.confirmation"/>
		</action>
 	</action-mappings>

	<!-- ========== Controller Configuration ================================ -->
	<controller processorClass="net.sourceforge.fenixedu.presentationTier.processor.FenixRequestProcessorWithTiles"/>

	<!-- ========== Message Resources Definitions ============================ -->
	<message-resources parameter="ServidorApresentacao.AssiduousnessResources" null="false"/>
	<message-resources parameter="ServidorApresentacao.GlobalResources" key="GLOBAL_RESOURCES" null="false"/>
	
	<!-- ========== Plug Ins Configuration ================================= -->
	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
      <set-property property="pathnames" 
		value="/WEB-INF/validator-rules.xml,/WEB-INF/fenix-validator-rules.xml,/WEB-INF/conf/validation-managementAssiduousness.xml"/>
	</plug-in>

	<plug-in className="org.apache.struts.tiles.TilesPlugin" >
		<set-property property="definitions-config"
					  value="/WEB-INF/tiles/layouts/tiles-layout-definitions.xml,/WEB-INF/tiles/managementAssiduousness/tiles-managementAssiduousness-definitions.xml,/WEB-INF/tiles/managementAssiduousness/tiles-managementAssiduousness-pages-definitions.xml,/WEB-INF/tiles-assiduousness-definitions.xml" />
		<set-property property="moduleAware" value="true" />
		<set-property property="definitions-parser-validate" value="true" />
	</plug-in>    
</struts-config>