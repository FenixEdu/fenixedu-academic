<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.0//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_0.dtd">

<form-validation>
  <formset>
    <!-- Validacao para o formulario de criacao de Sitio -->
    <form name="criarSitioForm">
      <field property="nome" depends="required">
        <arg0 key="Nome" resource="false"/>
      </field>

      <field property="anoCurricular" depends="required,range">
        <arg0 key="Ano Curricular" resource="false"/>
        <arg1 key="${var:min}" resource="false"/>
        <arg2 key="${var:max}" resource="false"/>
        <var>
          <var-name>min</var-name>
          <var-value>1</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>5</var-value>
        </var>
      </field>

      <field property="semestre" depends="required,range">
        <arg0 key="Semestre" resource="false"/>
        <arg1 key="${var:min}" resource="false"/>
        <arg2 key="${var:max}" resource="false"/>
        <var>
          <var-name>min</var-name>
          <var-value>1</var-value>
        </var>
        <var>
          <var-name>max</var-name>
          <var-value>2</var-value>
        </var>
      </field>

      <field property="curso" depends="required">
        <arg0 key="Curso" resource="false"/>
      </field>

      <field property="departamento" depends="required">
        <arg0 key="Departamento" resource="false"/>
      </field>
    </form>
  </formset>
</form-validation>
