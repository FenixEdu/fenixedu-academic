<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE struts-config PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
	"http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
    <!-- ========== Data Source Configuration =============================== -->
    <!-- ========== Form Bean Definitions ================================== -->
    <form-beans type="org.apache.struts.action.ActionFormBean">
        <!-- Form vazio -->
        <form-bean name="searchInformationForm" 
            type="org.apache.struts.validator.DynaValidatorForm" dynamic="true">
            <form-property name="executionDegreeId" type="java.lang.Integer"/>
            <form-property name="basic" type="java.lang.Boolean"/>
            <form-property name="executionYear" type="java.lang.String"/>
        </form-bean>
        
        <!-- TEACHING REPORT FORM  -->
	    <form-bean name="teachingReportForm" 
                   type="org.apache.struts.validator.DynaValidatorForm" dynamic="true">
                <form-property name="executionCourseId" type="java.lang.Integer" />
        </form-bean>

		<!-- ==================== View Curricular Course Historic ================== -->
		<form-bean name="executionYearDegreeCurricularPlanForm" type="org.apache.struts.validator.DynaValidatorForm" dynamic="true">
			<form-property name="executionYearID" type="java.lang.String"/>
			<form-property name="degreeCurricularPlanID" type="java.lang.String"/>
			<form-property name="page" type="java.lang.Integer" initial="0"/>
		</form-bean>	
		
			  <!-- =================== Inquiries ============== -->
      <form-bean name="sendEmailReminderForm" 
                 type="org.apache.struts.validator.DynaValidatorForm"
                 dynamic="true">
        	<form-property type="java.lang.String" name="method" />
        	<form-property type="java.lang.Integer" name="page" />
			<form-property type="java.lang.Integer[]" name="degreeCurricularPlanIds"/>
			<form-property type="java.lang.String" name="fromName" />
			<form-property type="java.lang.String" name="fromAddress" />
			<form-property type="java.lang.String" name="bodyTextSubject" />
			<form-property type="java.lang.String" name="bodyTextIntro" />
			<form-property type="java.lang.String" name="bodyTextEnd" />
		</form-bean>	

		<form-bean name="teachingStaffForm" type="org.apache.struts.validator.DynaValidatorForm" dynamic="true">
			<form-property name="executionYearID" type="java.lang.Integer"/>
			<form-property name="degreeCurricularPlanID" type="java.lang.Integer"/>
			<form-property name="executionCourseID" type="java.lang.Integer"/>
			<form-property name="nonAffiliatedTeacherName" type="java.lang.String"/>
			<form-property name="nonAffiliatedTeacherID" type="java.lang.Integer"/>
			<form-property name="nonAffiliatedTeacherInstitutionID" type="java.lang.Integer"/>
			<form-property name="nonAffiliatedTeacherInstitutionName" type="java.lang.String"/>			
			<form-property name="page" type="java.lang.Integer" initial="0"/>
			<form-property name="method" type="java.lang.String"/>
		</form-bean>	

		<form-bean name="defineResponsePeriodsForm" type="org.apache.struts.validator.DynaValidatorForm" dynamic="true">
			<form-property name="page" type="java.lang.Integer"/>
			<form-property name="method" type="java.lang.String"/>
			<form-property name="executionPeriodID" type="java.lang.String"/>
			<form-property name="inquiryResponseBegin" type="java.lang.String"/>
			<form-property name="inquiryResponseEnd" type="java.lang.String"/>
		</form-bean>

		<form-bean name="createClassificationsForm"
				type="org.apache.struts.validator.DynaValidatorForm"
				dynamic="true">
			<form-property name="entryGradeLimits" type="java.lang.Integer[]"/>
			<form-property name="approvationRatioLimits" type="java.lang.Integer[]"/>
			<form-property name="arithmeticMeanLimits" type="java.lang.Integer[]"/>
			<form-property name="method" type="java.lang.String"/>
			<form-property name="degreeCurricularPlanID" type="java.lang.Integer"/>
		</form-bean>

		<form-bean name="competenceCourseStatisticsForm" type="org.apache.struts.validator.DynaValidatorForm" dynamic="true">
			<form-property name="executionYearID" type="java.lang.Integer"/>
			<form-property name="registrationAgreement" type="java.lang.String"/>
			<form-property name="method" type="java.lang.String"/>
		</form-bean>	

    </form-beans>

    <!-- ========== Global Exception Definitions ============================== -->
	<global-exceptions>
        <exception
			type="java.lang.Exception"
			key="error.Exception"
            handler="net.sourceforge.fenixedu.presentationTier.config.FenixContainerExceptionHandler"
			/>
		<exception
			type="net.sourceforge.fenixedu.applicationTier.Servico.exceptions.NotAuthorizedException"
			key="error.NotAuthorized"
			handler="net.sourceforge.fenixedu.presentationTier.config.FenixContainerExceptionHandler"
			/>
	</global-exceptions>

    <!-- ========== Global Forward Definitions =============================== -->
    <global-forwards type="org.apache.struts.action.ActionForward">
    </global-forwards>
    <!-- ========== Action Mapping Definitions =============================== -->
    <action-mappings type="org.apache.struts.action.ActionMapping">
        <action path="/index" forward="index" />
        <action path="/searchTeachersInformation" 
            type="net.sourceforge.fenixedu.presentationTier.Action.gep.SearchTeachersInformationAction" 
            name="searchInformationForm" 
            input="/searchTeachersInformation?method=searchForm" scope="request" parameter="method" 
            className="net.sourceforge.fenixedu.presentationTier.mapping.framework.SearchActionMapping">
            <set-property property="serviceName" value="ReadTeachersInformation"/>
            <set-property property="objectAttribute" value="infoSiteTeacherInformation"/>
            <set-property property="listAttribute" value="infoSiteTeachersInformation"/>
            <set-property property="notFoundMessageKey" value="label.gep.notFound"/>
            <forward name="search-form" path="search-teachers-information"/>
            <forward name="list-one" path="view-teachers-information"/>
            <forward name="list-many" path="view-teachers-information"/>
        </action>
        <action path="/searchCoursesInformation" 
            type="net.sourceforge.fenixedu.presentationTier.Action.gep.SearchCoursesInformationAction" 
            name="searchInformationForm" 
            input="/searchCoursesInformation.do?method=searchForm" scope="request" parameter="method" 
            className="net.sourceforge.fenixedu.presentationTier.mapping.framework.SearchActionMapping">
            <set-property property="serviceName" value="ReadCoursesInformation"/>
            <set-property property="objectAttribute" value="infoSiteCourseInformation"/>
            <set-property property="listAttribute" value="infoSiteCoursesInformation"/>
            <set-property property="notFoundMessageKey" value="label.gep.notFound"/>
            <forward name="search-form" path="search-courses-information"/>
            <forward name="list-one" path="view-courses-information"/>
            <forward name="list-many" path="view-courses-information"/>
        </action>
        <!-- Read Teacher Information -->
        <action path="/readTeacherInformation" scope="request" 
            type="net.sourceforge.fenixedu.presentationTier.Action.coordinator.ReadTeacherInformationAction" >
            <forward name="show" path="view-teacher-information"/>
        </action>
        
        <action path="/readCourseInformation" scope="request" 
            type="net.sourceforge.fenixedu.presentationTier.Action.gep.ReadCourseInformationAction" >
            <forward name="show" path="view-course-information"/>
        </action>
        
        <action path="/listCoursesInformation" 
            type="net.sourceforge.fenixedu.presentationTier.Action.gep.SearchCoursesInformationAction" 
            input="/listCoursesInformation.do?method=searchForm" scope="request" parameter="method" 
            className="net.sourceforge.fenixedu.presentationTier.mapping.framework.SearchActionMapping">
            <set-property property="serviceName" value="ReadCoursesInformation"/>
            <set-property property="objectAttribute" value="infoSiteCourseInformation"/>
            <set-property property="listAttribute" value="infoSiteCoursesInformation"/>
            <set-property property="notFoundMessageKey" value="label.gep.notFound"/>
            <forward name="search-form" path="search-courses-information"/>
            <forward name="list-one" path="list-courses-information"/>
            <forward name="list-many" path="list-courses-information"/>
        </action>
        <action path="/listCoursesInformationEnglish" 
            type="net.sourceforge.fenixedu.presentationTier.Action.gep.SearchCoursesInformationAction" 
            input="/listCoursesInformationEnglish.do?method=searchForm" scope="request" parameter="method" 
            className="net.sourceforge.fenixedu.presentationTier.mapping.framework.SearchActionMapping">
            <set-property property="serviceName" value="ReadCoursesInformation"/>
            <set-property property="objectAttribute" value="infoSiteCourseInformation"/>
            <set-property property="listAttribute" value="infoSiteCoursesInformation"/>
            <set-property property="notFoundMessageKey" value="label.gep.notFound"/>
            <forward name="search-form" path="search-courses-information"/>
            <forward name="list-one" path="list-courses-information-english"/>
            <forward name="list-many" path="list-courses-information-english"/>
        </action>
         <action path="/listCoursesAcreditation" 
            type="net.sourceforge.fenixedu.presentationTier.Action.gep.SearchCoursesInformationAction" 
            input="/listCoursesAcreditation.do?method=searchForm" scope="request" parameter="method" 
            className="net.sourceforge.fenixedu.presentationTier.mapping.framework.SearchActionMapping">
            <set-property property="serviceName" value="ReadCoursesInformation"/>
            <set-property property="objectAttribute" value="infoSiteCourseInformation"/>
            <set-property property="listAttribute" value="infoSiteCoursesInformation"/>
            <set-property property="notFoundMessageKey" value="label.gep.notFound"/>
            <forward name="search-form" path="search-courses-information"/>
            <forward name="list-one" path="list-courses-acreditation"/>
            <forward name="list-many" path="list-courses-acreditation"/>
        </action>
        <action path="/listTeachersAcreditation" 
            type="net.sourceforge.fenixedu.presentationTier.Action.gep.SearchTeachersInformationAction" 
            input="/listTeachersAcreditation.do?method=searchForm" scope="request" parameter="method" 
            className="net.sourceforge.fenixedu.presentationTier.mapping.framework.SearchActionMapping">
            <set-property property="serviceName" value="ReadTeachersInformation"/>
            <set-property property="objectAttribute" value="infoSiteTeacherInformation"/>
            <set-property property="listAttribute" value="infoSiteTeachersInformation"/>
            <set-property property="notFoundMessageKey" value="label.gep.notFound"/>
            <forward name="search-form" path="search-teachers-information"/>
            <forward name="list-one" path="list-teachers-acreditation"/>
            <forward name="list-many" path="list-teachers-acreditation"/>
        </action>
        
         <!-- Teaching Report -->
        <action type="net.sourceforge.fenixedu.presentationTier.Action.gesdis.TeachingReportAction" 
			path="/viewTeachingReport" name="teachingReportForm" 
			input="/viewTeachingReport.do?method=read" 
			parameter="method" validate="true" scope="request">
			<exception 
				type="net.sourceforge.fenixedu.applicationTier.Servico.exceptions.NotAuthorizedException" 
				key="error.exception.notAuthorized" 
				handler="net.sourceforge.fenixedu.presentationTier.config.FenixNotAuthorizedExceptionHandler" 
				/>
			<forward name="successfull-read" path="view-teaching-report"/>
		</action>

        <action type="net.sourceforge.fenixedu.presentationTier.Action.gep.CompetenceCourseStatisticsDispatchAction" 
			path="/competenceCoursesStatistics" 
			name="competenceCourseStatisticsForm" 
			input="/competenceCoursesStatistics.do?method=prepare" 
			parameter="method" 
			validate="true" 
			scope="request"
		>
			<forward name="chooseExecutionYear" path="chooseExecutionYear"/>
		</action>

	    <!-- ==================== View Curricular Course Historic ================== -->
       	<action path="/chooseExecutionYearAndDegreeCurricularPlan"
       		name="executionYearDegreeCurricularPlanForm"
       		type="net.sourceforge.fenixedu.presentationTier.Action.commons.curriculumHistoric.DegreeCurricularPlanExecutionYearDispacthAction"
       		validate="true"
			input="/chooseExecutionYearAndDegreeCurricularPlan.do?method=prepare&amp;page=0"
       		scope="request"
       		parameter="method">
       		<forward name="chooseExecutionYear" path="view-degree-curricular-plan-execution-year"/>
			<forward name="showActiveCurricularCourses" path="show-active-curricular-scopes"/>
       	</action>

		<action path="/showCurriculumHistoric"
       		type="net.sourceforge.fenixedu.presentationTier.Action.commons.curriculumHistoric.ShowCurriculumHistoricAction"
       		scope="request"
			input="/chooseExecutionYearAndDegreeCurricularPlan.do?method=prepare&amp;page=0"
       		parameter="method">
       		<forward name="show-report" path="view-curriculum-historic"/>
       	</action>

	    <!-- ==================== Inquiries ================== -->
		<action path="/sendEmailReminder"
			type="net.sourceforge.fenixedu.presentationTier.Action.gep.inquiries.SendEmailReminderAction"
			name = "sendEmailReminderForm"
			scope="request"
			input="/sendEmailReminder.do?method=prepare&amp;page=0"
			parameter="method"
			>

			<forward name="chooseDegreeCurricularPlans" path="choose-degree-curricular-plans"/>
			<forward name="showReport" path="show-report"/>
		</action>

		<action path="/teachingStaff"
			type="net.sourceforge.fenixedu.presentationTier.Action.gep.TeachingStaffDispatchAction"
			name = "teachingStaffForm"
			scope="request"
			input="/teachingStaff.do?method=prepare"
			parameter="method"
			>
			<forward name="chooseExecutionYearAndDegreeCurricularPlan" path="teachingStaff.chooseExecutionYearAndDegreeCurricularPlan"/>
			<forward name="chooseExecutionCourse" path="teachingStaff.chooseExecutionCourse"/>
			<forward name="viewTeachingStaff" path="teachingStaff.viewTeachingStaff"/>			
		</action>
		
		<action path="/defineResponsePeriods"
			type="net.sourceforge.fenixedu.presentationTier.Action.gep.inquiries.DefineResponsePeriodsDA"
			name = "defineResponsePeriodsForm"
			scope="request"
			input="/defineResponsePeriods.do?method=prepare&amp;page=0"
			parameter="method"
			>
			<forward name="showForm" path="define.response.periods"/>
		</action>		

		<action path="/createClassificationsForStudents"
				parameter="method"
				name="createClassificationsForm"
				type="net.sourceforge.fenixedu.presentationTier.Action.manager.inquiries.CreateClassificationsForStudentsDispatchAction"
				scope="request">
			<forward name="chooseDegreeCurricularPlan" path="chooseDegreeCurricularPlan"/>
		</action>		

		<action path="/createClassificationsForStudents"
				parameter="method"
				name="createClassificationsForm"
				type="net.sourceforge.fenixedu.presentationTier.Action.manager.inquiries.CreateClassificationsForStudentsDispatchAction"
				scope="request">
			<forward name="chooseDegreeCurricularPlan" path="chooseDegreeCurricularPlan"/>
		</action>		

		<action path="/executionCourseInquiries"
				parameter="method"
				type="net.sourceforge.fenixedu.presentationTier.Action.gep.inquiries.ExecutionCourseInquiriesDA"
				scope="request">
			<forward name="showExecutionCoursesForInquiries" path="show-execution-courses-for-inquiries"/>
		</action>		

    </action-mappings>
    <!-- ========== Controller Configuration ================================ -->
    <controller processorClass="net.sourceforge.fenixedu.presentationTier.processor.FenixRequestProcessorWithTiles"/>
    <!-- ========== Message Resources Definitions ============================ -->

    <message-resources parameter="resources.EnumerationResources" key="ENUMERATION_RESOURCES" null="false"/>
	<message-resources parameter="resources.GlobalResources" key="GLOBAL_RESOURCES" null="false"/>
	<message-resources parameter="resources.ImageResources" key="IMAGE_RESOURCES" null="false"/>
	<message-resources parameter="resources.HtmlAltResources" key="HTMLALT_RESOURCES" null="false"/>
    <message-resources parameter="resources.ApplicationResources" key="APPLICATION_RESOURCES" null="false"/>
    <message-resources parameter="resources.PortalResources" key="PORTAL_RESOURCES" null="false"/>
    <message-resources parameter="resources.StudentResources" key="STUDENT_RESOURCES" null="false"/>
    <message-resources parameter="resources.TeacherCreditsSheetResources" key="TEACHER_CREDITS_SHEET_RESOURCES" null="false"/>
    <message-resources parameter="resources.GEPResources" key="GEP_RESOURCES" null="false"/>
    <message-resources parameter="resources.DegreeAdministrativeOfficeResources" key="DEGREE_ADM_OFFICE" null="false"/>
	<message-resources parameter="resources.CurriculumHistoricResources" key="CURRICULUM_HISTORIC_RESOURCES" null="false"/>
	<message-resources parameter="resources.InquiriesResources" key="INQUIRIES_RESOURCES" null="false"/>
    <message-resources parameter="resources.PublicDegreeInformation" key="PUBLIC_DEGREE_INFORMATION" null="false"/>
   	<message-resources parameter="resources.ManagerResources" key="MANAGER_RESOURCES" null="false"/> 
   	<message-resources parameter="resources.DomainExceptionResources" key="DOMAIN_EXCEPTION_RESOURCES" null="false"/> 
    <message-resources parameter="resources.RendererResources" key="RENDERER_RESOURCES" null="false"/> 
    <message-resources parameter="resources.AdminOffice" key="ADMIN_OFFICE_RESOURCES" null="false"/>  
   	<message-resources parameter="resources.CandidateResources" key="CANDIDATE_RESOURCES" null="false" />     
	<message-resources parameter="resources.VigilancyResources" key="VIGILANCY_RESOURCES" null="false"/> 
   	<message-resources parameter="resources.TestsResources" key="TESTS_RESOURCES" null="false" />
    <!-- ========== Plug Ins Configuration ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" 
            value="/WEB-INF/validator-rules.xml,/WEB-INF/fenix-validator-rules.xml,/WEB-INF/conf/validation-gep.xml"/>
    </plug-in>
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" 
            value="/WEB-INF/tiles/layouts/tiles-layout-definitions.xml,/WEB-INF/tiles/gep/tiles-gep-definitions.xml,/WEB-INF/tiles/gep/tiles-gep-pages-definitions.xml" 
            />
        <set-property property="moduleAware" value="true" />
        <set-property property="definitions-parser-validate" value="true" />
    </plug-in>
</struts-config>
