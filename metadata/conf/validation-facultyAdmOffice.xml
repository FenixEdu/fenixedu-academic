<?xml version="1.0" encoding="UTF-8" ?>
<!-- @validation.doctype@ -->
<form-validation>
    <formset>

		<!-- Initial form to search a Grant Owner -->
        <form name="searchGrantOwnerForm">
            <field property="idNumber" depends="integer" page="1">
                <msg name="integer" key="errors.integer" resource="true"/>
                <arg0 key="label.grant.owner.idNumber"/>
            </field>
        </form>

		<!-- Initial form to search a Grant Owner By Number-->
        <form name="searchGrantOwnerByNumberForm">
            <field property="idGrantOwner" depends="required, integer" page="1">
                <msg name="integer" key="errors.integer" resource="true"/>
                <arg0 key="label.grant.owner.idInternal"/>
            </field>
        </form>


		<!-- Edit Grant Contract Form -->
        <form name="editGrantContractForm">
            <field property="dateBeginContract" depends="required, mask, date" page="1">
				<msg name="date" key="errors.invalid.date"/>
				<msg name="mask" key="errors.invalid.date"/>
				<arg0 key="label.grant.contract.beginDate" resource="true"/>
				<var>
					<var-name>datePattern</var-name>
				 	<var-value>dd-MM-yyyy</var-value>
				</var>
				<var>
					<var-name>mask</var-name>
					<var-value>^((.||..)-(.||..)-2...)$</var-value>
				</var>
		    </field>
            <field property="dateEndContract" depends="required, mask, date" page="1">
				<msg name="date" key="errors.invalid.date"/>
		   		<msg name="mask" key="errors.invalid.date"/>
				<arg0 key="label.grant.contract.endDate" resource="true"/>
				<var>
					<var-name>datePattern</var-name>
					<var-value>dd-MM-yyyy</var-value>
	        	</var>
		    	<var>
					<var-name>mask</var-name>
					<var-value>^((.||..)-(.||..)-2...)$</var-value>
	        	</var>
		    </field>	    
            <field property="grantResponsibleTeacher" depends="required, integer" page="1">
                <msg name="number" key="errors.integer"/>
				<arg0 key="label.grant.contract.responsibleTeacher" resource="true"/>
            </field>
            <field property="grantOrientationTeacher" depends="required, integer" page="1">
				<msg name="number" key="errors.integer"/>
				<arg0 key="label.grant.contract.orientationTeacher" resource="true"/>
		    </field>
		</form>
		
		<!-- Edit Grant Type Form -->
		<form name="editGrantTypeForm">
            <field property="state" depends="mask, date" page="1">
				<msg name="date" key="errors.invalid.date"/>
				<msg name="mask" key="errors.invalid.date"/>
				<arg0 key="label.grant.type.state" resource="true"/>
				<var>
					<var-name>datePattern</var-name>
				 	<var-value>dd-MM-yyyy</var-value>
				</var>
				<var>
					<var-name>mask</var-name>
					<var-value>^((.||..)-(.||..)-....)$</var-value>
				</var>
		    </field>
            <field property="name" depends="required" page="1">
				<arg0 key="label.grant.type.name" resource="true"/>
            </field>
            <field property="sigla" depends="required" page="1">
				<arg0 key="label.grant.type.sigla" resource="true"/>
            </field>
            <field property="minPeriodDays" depends="integer" page="1">
				<msg name="number" key="errors.integer"/>
				<arg0 key="label.grant.type.minPeriodDays" resource="true"/>
		    </field>
		    <field property="maxPeriodDays" depends="integer" page="1">
				<msg name="number" key="errors.integer"/>
				<arg0 key="label.grant.type.maxPeriodDays" resource="true"/>
		    </field>
		    <field property="indicativeValue" depends="double" page="1">
				<msg name="number" key="errors.integer"/>
				<arg0 key="label.grant.type.indicativeValue" resource="true"/>
		    </field>
		</form>

		<!-- Edit Grant Qualification Form -->
		<form name="editGrantQualificationForm">
			<field property="degree" depends="required" page="1">
				<arg0 key="label.grant.qualification.degree" resource="true"/>
            </field>
            <field property="school" depends="required" page="1">
				<arg0 key="label.grant.qualification.school" resource="true"/>
            </field>			
            <field property="qualificationDate" depends="required, mask, date" page="1">
				<msg name="date" key="errors.invalid.date"/>
				<msg name="mask" key="errors.invalid.date"/>
				<arg0 key="label.grant.qualification.qualificationDate" resource="true"/>
				<var>
					<var-name>datePattern</var-name>
				 	<var-value>dd-MM-yyyy</var-value>
				</var>
				<var>
					<var-name>mask</var-name>
					<var-value>^((.||..)-(.||..)-....)$</var-value>
				</var>
		    </field>
		    <field property="equivalenceDate" depends="mask, date" page="1">
				<msg name="date" key="errors.invalid.date"/>
				<msg name="mask" key="errors.invalid.date"/>
				<arg0 key="label.grant.qualification.equivalenceDate" resource="true"/>
				<var>
					<var-name>datePattern</var-name>
				 	<var-value>dd-MM-yyyy</var-value>
				</var>
				<var>
					<var-name>mask</var-name>
					<var-value>^((.||..)-(.||..)-....)$</var-value>
				</var>
		    </field>
		</form>

		<!-- Edit Grant Subsidy Form -->
        <form name="editGrantSubsidyForm">
            <field property="value" depends="required, double" page="1">
				<msg name="number" key="errors.double"/>
				<arg0 key="label.grant.subsidy.value" resource="true"/>
		    </field>
		    <field property="totalCost" depends="required, double" page="1">
				<msg name="number" key="errors.double"/>
				<arg0 key="label.grant.subsidy.totalCost" resource="true"/>
		    </field>
		</form>

        <!-- Edit a Grant Owner form -->
    	<form name="editGrantOwnerForm">
			<field property="dateSendCGD" depends="mask, date" page="1">
				<msg name="date" key="errors.invalid.date"/>
				<msg name="mask" key="errors.invalid.date"/>
				<arg0 key="label.grant.owner.dateSendCGD" resource="true"/>
				<var>
					<var-name>datePattern</var-name>
					<var-value>dd-MM-yyyy</var-value>
				</var>
				<var>
					<var-name>mask</var-name>
					<var-value>^((.||..)-(.||..)-2...)$</var-value>
					</var>
			</field>	    
			<field property="cardCopyNumber" depends="integer" page="1">
				<msg name="number" key="errors.integer"/>
				<arg0 key="label.grant.owner.cardCopyNumber" resource="true"/>
			</field>
			
			<field property="idNumber" depends="required,integer" page="1">
				<msg name="number" key="errors.integer"/>
				<arg0 key="label.grant.owner.idNumber" resource="true"/>
			</field>
			<field property="name" depends="required" page="1">
				<arg0 key="label.grant.owner.infoperson.name" resource="true"/>
			</field>
			<field property="idDate" depends="required,mask, date" page="1">
				<msg name="date" key="errors.invalid.date"/>
				<msg name="mask" key="errors.invalid.date"/>
				<arg0 key="label.grant.owner.infoperson.idDate" resource="true"/>
				<var>
					<var-name>datePattern</var-name>
					<var-value>dd-MM-yyyy</var-value>
				</var>
				<var>
					<var-name>mask</var-name>
					<var-value>^((.||..)-(.||..)-....)$</var-value>
				</var>
			</field>
			<field property="idValidDate" depends="required, mask, date" page="1">
				<msg name="date" key="errors.invalid.date"/>
				<msg name="mask" key="errors.invalid.date"/>
				<arg0 key="label.grant.owner.infoperson.idValidDate" resource="true"/>
				<var>
					<var-name>datePattern</var-name>
					<var-value>dd-MM-yyyy</var-value>
				</var>
				<var>
					<var-name>mask</var-name>
					<var-value>^((.||..)-(.||..)-2...)$</var-value>
				</var>
			</field>
			<field property="birthdate" depends="required, mask, date" page="1">
				<msg name="date" key="errors.invalid.date"/>
				<msg name="mask" key="errors.invalid.date"/>
				<arg0 key="label.grant.owner.infoperson.birthdate" resource="true"/>
				<var>
					<var-name>datePattern</var-name>
					<var-value>dd-MM-yyyy</var-value>
				</var>
				<var>
					<var-name>mask</var-name>
					<var-value>^((.||..)-(.||..)-....)$</var-value>
				</var>
			</field>
			<field property="areaCode" depends="mask" page="2">
				<msg name="mask" key="errors.invalid.zipCode"/>
				<var>	
					<var-name>mask</var-name>
					<var-value>^\d{4}(-\d{3})$</var-value>
				</var>
            </field>
            <field property="socialSecurityNumber" depends="integer" page="1">
				<msg name="number" key="errors.integer"/>
				<arg0 key="label.grant.owner.infoperson.socialSecurityNumber" resource="true"/>
			</field>
			<field property="fiscalCode" depends="integer" page="1">
				<msg name="number" key="errors.integer"/>
				<arg0 key="label.grant.owner.infoperson.fiscalCode" resource="true"/>
			</field>  
			<field property="phone" depends="integer" page="1">
				<msg name="phone" key="errors.integer"/>
				<arg0 key="label.grant.owner.infoperson.phone" resource="true"/>
			</field>
			<field property="cellphone" depends="integer" page="1">
				<msg name="cellphone" key="errors.integer"/>
				<arg0 key="label.grant.owner.infoperson.cellPhone" resource="true"/>
			</field>			
    	</form>

		<!-- Edit Grant Part Form -->
        <form name="editGrantPartForm">
            <field property="percentage" depends="required, integer" page="1">
				<msg name="number" key="errors.integer"/>
				<arg0 key="label.grant.part.percentage" resource="true"/>
		    </field>
		    <field property="grantPaymentEntityNumber" depends="required, integer" page="1">
				<msg name="number" key="errors.integer"/>
				<arg0 key="label.grant.part.grantPaymentEntity.number" resource="true"/>
		    </field>
		    <field property="responsibleTeacherNumber" depends="required, integer" page="1">
				<msg name="number" key="errors.integer"/>
				<arg0 key="label.grant.part.responsibleTeacher.number" resource="true"/>
		    </field>
		</form>
		
    </formset>
</form-validation>


