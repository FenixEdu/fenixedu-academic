<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- TODO: make this a public id or at least obsolute 
     Currently there is a semi-hack built in the RendererPlugin to accept this format.
-->
<!DOCTYPE renderers-config SYSTEM "fenix-renderers-config.dtd">

<renderers-config>
<!--
  Example:
	
 	<renderer type="java.lang.Integer" layout="testing" 
			  class="net.sourceforge.fenixedu.renderers.TemplateRenderer">
		<property name="template" value="/template.jsp"/>
	</renderer>
	
    <renderer mode="input" type="java.lang.Integer"
              class="net.sourceforge.fenixedu.renderers.IntegerInputRenderer"/>

    <renderer mode="input" type="java.lang.Integer" layout="base-16" 
              class="net.sourceforge.fenixedu.renderers.IntegerInputRenderer">
        <property name="base" layout="16"/>
    </renderer>

	This piece means that any object of type Integer, when presented
	with the layout "testing" will be rendered by the given TemplateRenderer and
    that the renderer's property 'template' will be set to "/template.jsp". This 
    should make the rendere delegate the presentation of the number to the
    given JSP.
    
    The second part speficies that the NumberInputRenderer will be used to
    generate the input presentation of a number. If the requested layout is
    "base-16" then input format will be assumed to be in hexadecimal.

Documentation:
    
    To document an entry use '@' as the first character of a comment. The first
    entry after such comment will be documented.replayed
    
    Example:
    
        <!- -@ the comment with <tt>HTML</tt> embeded - ->
 -->
  
    <!-- ouptut -->

    <!--@ The default presentation for a custom component that was "manually" created. -->  
    <renderer type="net.sourceforge.fenixedu.renderers.components.HtmlComponent" class="net.sourceforge.fenixedu.renderers.StandardComponentRenderer"/>
  
    <!--@ The default presentation for every object. -->
    <renderer type="java.lang.Class" layout="label" class="net.sourceforge.fenixedu.renderers.ClassAsLabelRenderer"/>

    <!--@ The default presentation for every object. -->
    <renderer type="java.lang.Object" class="net.sourceforge.fenixedu.renderers.StandardObjectRenderer">
    		<property name="labelTerminator" value=":"/>
    </renderer>

    <renderer type="java.lang.Object" layout="null-as-label" class="net.sourceforge.fenixedu.renderers.NullAsLabelRenderer"/>

    <!--@ A tabular presentation for an object. This consist of a table were each row presents one
          of the object's slots. The slot's name is shown in the left column and the corresponding 
          value in the right column. -->
    <renderer type="java.lang.Object" layout="tabular" class="net.sourceforge.fenixedu.renderers.StandardObjectRenderer">
    		<property name="labelTerminator" value=":"/>
    </renderer>
  
    <!--@ The template layout is used when you specify the template attribute of a renderer's tag. It delegates
          the presentation of the object to a JSP that is extended with the <tt>fenix-template.tld</tt>. -->
    <renderer type="java.lang.Object" layout="template" class="net.sourceforge.fenixedu.renderers.TemplateRenderer"/>
    
    <!--@ This layout shows each slot value after the previous without a special organization. You can specify
          a separator between values and achive simple presentations like "6666 / José Dias" for a person. -->
    <renderer type="java.lang.Object" layout="values" class="net.sourceforge.fenixedu.renderers.ValuesRenderer"/>
    
    <!--@ The format offers other way of presenting objects inline. The <tt>format</tt> property accepts a special
          syntax that allows you to choose how the information is presented. The the renderer documentation for
          more details. -->
    <renderer type="java.lang.Object" layout="format" class="net.sourceforge.fenixedu.renderers.FormatRenderer"/>
    
    <!--@ This layout is only to be used for slots of domain objects and never for the top level object that is 
          beeing presented. It generates a link for the object details. The action called is configurable. The 
          default layout is set to the tabular presentation of the object. -->
    <renderer type="java.lang.Object" layout="link" class="net.sourceforge.fenixedu.presentationTier.renderers.ObjectLinkRenderer"/>

    <!--@ Presents the object's slots in a flow layout. With or without labels.  -->
    <renderer type="java.lang.Object" layout="flow" class="net.sourceforge.fenixedu.renderers.FlowRenderer" />

    <renderer type="net.sourceforge.fenixedu.domain.Person" layout="person-email-identity" class="net.sourceforge.fenixedu.presentationTier.renderers.EmailIdentityRenderer"/>
  
    <renderer type="java.lang.String" class="net.sourceforge.fenixedu.renderers.StringRenderer"/>
    
    <!--@ Considers that the string is html and as such does not escape it's content nor does it replace newlines. -->
    <renderer type="java.lang.String" layout="html" class="net.sourceforge.fenixedu.renderers.StringRenderer">
        <property name="newlineAware" value="false"/>
        <property name="escaped" value="false"/>
    </renderer>
    
    <renderer type="java.lang.String" layout="person-short-name" class="net.sourceforge.fenixedu.presentationTier.renderers.PersonNameRenderer">
        <property name="firstLastOnly" value="true"/>
    </renderer>

    <renderer type="net.sourceforge.fenixedu.domain.DegreeCurricularPlan" layout="degree-label" class="net.sourceforge.fenixedu.renderers.FormatRenderer">
        <property name="format" value="${degree.sigla} ${initialDateYearMonthDay.year}"/>
    </renderer>
    <renderer type="net.sourceforge.fenixedu.domain.Shift" layout="shift-plain" class="net.sourceforge.fenixedu.presentationTier.renderers.ShiftPlainRenderer"/>

    <renderer type="net.sourceforge.fenixedu.util.MultiLanguageString" class="net.sourceforge.fenixedu.presentationTier.renderers.MultiLanguageStringRenderer"/>
    
    <renderer type="java.lang.Number" class="net.sourceforge.fenixedu.renderers.IntegerRenderer"/>
    <renderer type="int" class="net.sourceforge.fenixedu.renderers.IntegerRenderer"/>
    <renderer type="long" class="net.sourceforge.fenixedu.renderers.IntegerRenderer"/>
    <renderer type="short" class="net.sourceforge.fenixedu.renderers.IntegerRenderer"/>
    
    <renderer type="double" class="net.sourceforge.fenixedu.renderers.NumberRenderer"/>
    <renderer type="float" class="net.sourceforge.fenixedu.renderers.NumberRenderer"/>
    
    <renderer type="java.lang.Boolean" class="net.sourceforge.fenixedu.renderers.BooleanRenderer"/>
    <renderer type="boolean" class="net.sourceforge.fenixedu.renderers.BooleanRenderer"/>

    <!--@ The default presentation for an enum searches the bundle ENUMERATION_RESOURCES for a description
          of the enum value. The key used for seaching is the enum name. -->
    <renderer type="java.lang.Enum" class="net.sourceforge.fenixedu.renderers.EnumRenderer"/>
    
	<renderer type="java.util.EnumSet" class="net.sourceforge.fenixedu.renderers.EnumSetRenderer"/>    
    
    <!--@ The default presentation of the date respect the user locale and preents the date
          accordingly with the format given.  -->
    <renderer type="java.util.Date" class="net.sourceforge.fenixedu.renderers.DateRenderer"/>

	<renderer type="org.joda.time.base.AbstractPartial" class="net.sourceforge.fenixedu.presentationTier.renderers.PartialRenderer"/>
	
	<renderer type="org.joda.time.Duration" class="net.sourceforge.fenixedu.presentationTier.renderers.DurationRenderer"/>

	<!--@ The default presentation for a joda partial is the presentation of all the date components of partial as
		  a normal date and a label explaining the components presented -->
    <renderer type="org.joda.time.Partial" class="net.sourceforge.fenixedu.presentationTier.renderers.PartialRenderer"/>

    <!--@ The default presentation for a domain object consist of a link for it's details. The is the top level 
          version of the <tt>link</tt> layout. -->
    <renderer type="net.sourceforge.fenixedu.domain.DomainObject" class="net.sourceforge.fenixedu.renderers.FormatRenderer">
        <property name="format" value="${class.simpleName}:${idInternal}"/>
    </renderer>
    
    <renderer mode="input" type="net.sourceforge.fenixedu.domain.DomainObject" layout="autoComplete" class="net.sourceforge.fenixedu.presentationTier.renderers.AutoCompleteInputRenderer">
        <property name="autoCompleteItemsStyleClass" value="autoCompleteItems"/>
        <property name="autoCompleteStyleClass" value="autoComplete"/>
        <property name="minChars" value="3"/>
    </renderer>
    
    <renderer layout="nestedTemplateLayout" type="net.sourceforge.fenixedu.domain.DomainObject" class="net.sourceforge.fenixedu.renderers.TemplateRenderer">
        <property name="template" value="/departmentMember/viewDepartmentTeachersExpectations/renderers/layouts/showPersonalExpectationTemplate.jsp"/>
    </renderer>
 
    <!--@ The default layout for a collection. -->
    <renderer type="java.util.Collection" class="net.sourceforge.fenixedu.renderers.CollectionRenderer"/>
    
    <!--@ Each object in the collection will be presented in a differente row. The given schema is used to define 
          the table columns as well as the table header. The table can also be extended with control links to the right. 
          Control links are link that are parameterized with values from the object beeing presented in each row.
          Check the renderer documentation for more details.  -->
    <renderer type="java.util.Collection" layout="tabular" class="net.sourceforge.fenixedu.renderers.CollectionRenderer"/>
    
    <!--@ This layout intends to provide the control links feature to a list presentation. Each object in the collection
          is presented with their own layout and schema in the left column o the table. -->
    <renderer type="java.util.Collection" layout="tabular-list" class="net.sourceforge.fenixedu.renderers.TabularListRenderer"/>
    
    <!--@ Each object in the collection is presented with it's own layout and schema. This layouts works for several objects
          the same way that the <tt>values</tt> layouts works for slots. -->
    <renderer type="java.util.Collection" layout="flowLayout" class="net.sourceforge.fenixedu.presentationTier.renderers.FlowCollectionRenderer" />

    <!--@ The tree layout allows a collection to be presented as a tree, that is, were you specify how an hierarchy is
          formed and a structure made by lists inside lists is created. -->
    <renderer type="java.util.Collection" layout="tree" class="net.sourceforge.fenixedu.presentationTier.renderers.TreeRenderer" />

    <!--@ The default layout for a list really creates an html list were each object is presented in a list item. -->
    <renderer type="java.util.List" class="net.sourceforge.fenixedu.renderers.ListRenderer"/>
    
    
    <!--@ LabelFormatter output. -->
    <renderer type="net.sourceforge.fenixedu.util.resources.LabelFormatter" class="net.sourceforge.fenixedu.presentationTier.renderers.LabelFormatterRenderer">
    		<property name="bundleName(application)" value="APPLICATION_RESOURCES"/>
    		<property name="bundleName(enum)" value="ENUMERATION_RESOURCES"/>
    		<property name="bundleName(default)" value="APPLICATION_RESOURCES"/>
    </renderer>
    
    <!-- input -->

    <!--@ The default layout for editing objects.  -->  
    <renderer mode="input" type="java.lang.Object" class="net.sourceforge.fenixedu.renderers.StandardInputRenderer">
    		<property name="labelTerminator" value=":"/>
    </renderer>

    <!--@ Allows an object to be editing in a tabular way, that is, labels are presented in the left column of the table
          and slot editors are presented in the right column. Additionally validation errors messages are presented to the
          right of the editor. -->  
    <renderer mode="input" type="java.lang.Object" layout="tabular" class="net.sourceforge.fenixedu.renderers.StandardInputRenderer">
    		<property name="labelTerminator" value=":"/>
    </renderer>
    
    <!--@ This layout allows several slots to be edited without a specific organization. Each slot's editor e shown after the
          previous. You can shoose to present the slot's label or not. -->
    <renderer mode="input" type="java.lang.Object" layout="flow" class="net.sourceforge.fenixedu.renderers.FlowInputRenderer">
            <property name="labelTerminator" value=":"/>
    </renderer>

    <!--@ Can be used to fill a slot with one of many possible objects. The objects are presented in an html menu. 
          Note that since the selection is made through a menu the presentatio of each object must be short and 
          valid as a menu option text. Use the <tt>format</tt> property if possible. -->
    <renderer mode="input" type="java.lang.Object" layout="menu-select" class="net.sourceforge.fenixedu.presentationTier.renderers.InputMenuOptionListRenderer"/>

    <!--@ Can be used to fill a slot with one of many possible objects. The objects are presented in an html menu. 
          Note that since the selection is made through a menu the presentatio of each object must be short and 
          valid as a menu option text. Use the <tt>format</tt> property if possible. -->    
	<renderer mode="input" type="java.lang.Object" layout="menu-select-postback" class="net.sourceforge.fenixedu.presentationTier.renderers.InputMenuOptionListRendererWithPostback"/>

    <renderer mode="input" type="java.lang.String" class="net.sourceforge.fenixedu.renderers.StringInputRenderer"/>
    <!--@ This layout allows an html text string to be edited with the fenix javascript html editor. 
          If the current browser is not supported by the html editor then it falls back to a simple text area. -->
    <renderer mode="input" type="java.lang.String" layout="htmlEditor" class="net.sourceforge.fenixedu.presentationTier.renderers.htmlEditor.HtmlEditorRenderer"/>
    
    <!--@ This layout can be used to edit html text using the TinyMCE editor instead of the standard html editor. -->
    <renderer mode="input" type="java.lang.String" layout="rich-text" class="net.sourceforge.fenixedu.presentationTier.renderers.htmlEditor.RichTextInputRenderer"/>

    <!--@ This layout indicates that we want to accept a text that can be very long and extend over multiple lines.  -->
    <renderer mode="input" type="java.lang.String" layout="longText" class="net.sourceforge.fenixedu.renderers.TextAreaInputRenderer"/>
    <renderer mode="input" type="net.sourceforge.fenixedu.util.MultiLanguageString" class="net.sourceforge.fenixedu.presentationTier.renderers.MultiLanguageStringInputRenderer"/>
    <renderer mode="input" type="net.sourceforge.fenixedu.util.MultiLanguageString" layout="area" class="net.sourceforge.fenixedu.presentationTier.renderers.MultiLanguageTextInputRenderer"/>
    <renderer mode="input" type="net.sourceforge.fenixedu.util.MultiLanguageString" layout="rich-text" class="net.sourceforge.fenixedu.presentationTier.renderers.MultiLanguageRichTextInputRenderer"/>
    
    <renderer mode="input" type="java.lang.Number" class="net.sourceforge.fenixedu.renderers.IntegerInputRenderer"/>

    <renderer mode="input" type="int" class="net.sourceforge.fenixedu.renderers.IntegerInputRenderer"/>
    <renderer mode="input" type="java.lang.Integer" class="net.sourceforge.fenixedu.renderers.IntegerInputRenderer"/>
    <renderer mode="input" type="long" class="net.sourceforge.fenixedu.renderers.LongInputRenderer"/>
    <renderer mode="input" type="java.lang.Long" class="net.sourceforge.fenixedu.renderers.LongInputRenderer"/>
    <renderer mode="input" type="short" class="net.sourceforge.fenixedu.renderers.ShortInputRenderer"/>
    <renderer mode="input" type="java.lang.Short" class="net.sourceforge.fenixedu.renderers.ShortInputRenderer"/>
    <renderer mode="input" type="double" class="net.sourceforge.fenixedu.renderers.DoubleInputRenderer"/>
    <renderer mode="input" type="java.lang.Double" class="net.sourceforge.fenixedu.renderers.DoubleInputRenderer"/>
    <renderer mode="input" type="float" class="net.sourceforge.fenixedu.renderers.FloatInputRenderer"/>
    <renderer mode="input" type="java.lang.Float" class="net.sourceforge.fenixedu.renderers.FloatInputRenderer"/>
    <renderer mode="input" type="java.math.BigDecimal" class="net.sourceforge.fenixedu.renderers.BigDecimalInputRenderer"/>

    <!--@ The default input layout for a boolean is a checkbox. Check is <tt>true</tt>, unchecked is <tt>false</tt>.  -->
    <renderer mode="input" type="java.lang.Boolean" class="net.sourceforge.fenixedu.renderers.BooleanInputRenderer"/>
    <!--@ The default input layout for a boolean is a checkbox. Check is <tt>true</tt>, unched is <tt>false</tt>.  -->
    <renderer mode="input" type="boolean" class="net.sourceforge.fenixedu.renderers.BooleanInputRenderer"/>
    
    <!--@ This layout allows you to input a boolean value though a menu. The menu is filled with two options. 
          The labels are fetched from the resources with the keys <tt>TRUE</tt> and <tt>FALSE</tt>. -->
    <renderer mode="input" type="java.lang.Boolean" layout="menu" class="net.sourceforge.fenixedu.renderers.BooleanMenuInputRenderer"/>
    <!--@ This layout allows you to input a boolean value though a menu. The menu is filled with two options. 
          The labels are fetched from the resources with the keys <tt>TRUE</tt> and <tt>FALSE</tt>. -->
    <renderer mode="input" type="boolean" layout="menu" class="net.sourceforge.fenixedu.renderers.BooleanMenuInputRenderer"/>

    <!--@ The default input layout for an enumeration presents an html menu with all the values of the enumeration
          as options. The option labels are fetched from the resources using the enum name as key.  -->
    <renderer mode="input" type="java.lang.Enum" class="net.sourceforge.fenixedu.renderers.EnumInputRenderer"/>
    <renderer mode="input" type="java.lang.Enum" layout="radio" class="net.sourceforge.fenixedu.renderers.EnumRadioInputRenderer">
    	<property name="style" value="list-style:none"/>
    </renderer>
    <renderer mode="input" type="java.util.Date" class="net.sourceforge.fenixedu.renderers.DateInputRenderer"/>
    <renderer mode="input" type="org.joda.time.DateTime" class="net.sourceforge.fenixedu.presentationTier.renderers.DateTimeInputRenderer"/>

	<!--@ The layout year-month allows you to insert a joda time partial given a month and a year -->
	<renderer mode="input" type="org.joda.time.Partial" layout="year-month" class="net.sourceforge.fenixedu.presentationTier.renderers.PartialInputRenderer">
		<property name="year" value="true"/>
		<property name="month" value="true"/>
	</renderer>
	
	<!--@ The layout year allows you to insert a joda time partial given a year -->
	<renderer mode="input" type="org.joda.time.Partial" layout="year" class="net.sourceforge.fenixedu.presentationTier.renderers.PartialInputRenderer">
		<property name="year" value="true"/>
	</renderer>
	
	<!--@ The layout year-month allows you to insert a joda time partial given a month, a year, and a day -->
	<renderer mode="input" type="org.joda.time.Partial" layout="year-month-day" class="net.sourceforge.fenixedu.presentationTier.renderers.PartialInputRenderer">
		<property name="year" value="true"/>
		<property name="month" value="true"/>
		<property name="day" value="true"/>
	</renderer>

	<!--@ The default layout for a TimeOfDay automatically includes the hour, minute, and second in the partial -->
	<renderer mode="input" type="org.joda.time.TimeOfDay" class="net.sourceforge.fenixedu.presentationTier.renderers.PartialInputRenderer">
		<property name="hour" value="true"/>
		<property name="minute" value="true"/>
		<property name="second" value="true"/>
	</renderer>
	
	<!--@ The default layout for a YearMonthDay automatically includes the hour, minute, and second in the partial -->
	<renderer mode="input" type="org.joda.time.YearMonthDay" class="net.sourceforge.fenixedu.presentationTier.renderers.PartialInputRenderer">
		<property name="year" value="true"/>
		<property name="month" value="true"/>
		<property name="day" value="true"/>
	</renderer>	
	
	<!--@ The default layout for a DateTime automatically includes the hour, minute, and second in the partial -->
	<renderer type="org.joda.time.DateTime" class="net.sourceforge.fenixedu.renderers.FormatRenderer">
		<property name="format" value="${dayOfMonth,%02d}-${monthOfYear,%02d}-${year} ${hourOfDay,%02d}:${minuteOfHour,%02d}"/>
	</renderer>	
	
    <!--@ Allows to present a collection in a table were rows can be sorted by pressing the table headers. -->
    <renderer type="java.util.Collection" layout="tabular-sortable" class="net.sourceforge.fenixedu.renderers.OrderableCollectionRenderer"/>

    <!--@ Allows to edit all objects of a collection by presenting each object in a table row and each slot editor in a table cell. -->
    <renderer mode="input" type="java.util.Collection" layout="tabular-editable" class="net.sourceforge.fenixedu.renderers.TabularInputRenderer"/>

    <!--@ A single object is edited in a tabular layout but slots are edited horizontally in a table row. -->
    <renderer mode="input" type="java.lang.Object" layout="tabular-row" class="net.sourceforge.fenixedu.renderers.SingleObjectTabularInputRenderer"/>
    
    <!--@ Presents a list were each object is presented with it's own layout and schema in a list item. Each item has
          an checkbox associated. This layout allows to choose several objects from a list. Only the choosen object will
          be part o the list that is created and used as the slot's value.  -->
    <renderer mode="input" type="java.util.List" layout="option-select" class="net.sourceforge.fenixedu.presentationTier.renderers.InputCheckBoxListRenderer">
    	<property name="eachClasses" value="dinline" />
    </renderer>
    
    <!--@ This layout allows you to construct a list of objects for input. The deletion if managed by the renderer the
          addition of objects to the list must be handled by an external action. -->
    <renderer mode="input" type="java.util.List" layout="external-add" class="net.sourceforge.fenixedu.renderers.ManageableListRenderer"/>

    <renderer mode="input" type="java.io.InputStream" class="net.sourceforge.fenixedu.renderers.FileInputRenderer"/>

    <!--@ This layout is the default layout for creating objects. The input of a class is the same as creating a new object of the
          type represented by the class. This allows to reuse all the other layouts defined for the input mode, that is, we don't need
          to define a create mode and redefine all the layouts to that mode.  -->
    <renderer mode="input" type="java.lang.Class" class="net.sourceforge.fenixedu.renderers.StandardInputRenderer"/>

    <!--@ This layouts is the same as the <tt>values</tt> layout preconfigured with an html separator of values. This
          way it can be used as a property of other layout. -->
    <renderer type="java.lang.Object" layout="values-dash" class="net.sourceforge.fenixedu.renderers.ValuesRenderer">
        <property name="htmlSeparator" value=" - "/>
    </renderer>

    <!-- FIXME: this should be removed, used for renderers examples only -->
    <renderer type="java.lang.Object" layout="nice-details-table" class="net.sourceforge.fenixedu.renderers.StandardObjectRenderer">
        <property name="classes" value="style1"/>
        <property name="columnClasses" value="listClasses,"/>
    </renderer>
    
    <renderer type="java.lang.Object" layout="values-comma" class="net.sourceforge.fenixedu.renderers.ValuesRenderer">
        <property name="htmlSeparator" value=", "/>
    </renderer>

    <renderer mode="input" type="java.lang.String" layout="allow-case-change" class="net.sourceforge.fenixedu.renderers.StringCaseChangerRenderer"/>

    <!--@ The layout username-as-person allows you to insert a person given a username -->
    <renderer mode="input" type="net.sourceforge.fenixedu.domain.Person" layout="username-as-person" class="net.sourceforge.fenixedu.presentationTier.renderers.PersonUsernameStringInputRenderer"/>

	<renderer mode="input" type="java.util.List" layout="tabular-option" class="net.sourceforge.fenixedu.renderers.TabularOptionInputRenderer"/>
</renderers-config>