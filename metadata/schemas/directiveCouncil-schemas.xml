<schema name="assiduousnessStructureSearch.responsible" type="net.sourceforge.fenixedu.dataTransferObject.directiveCouncil.assiduousnessStructure.AssiduousnessStructureSearch">
	<slot name="responsible" layout="autoComplete" key="label.teacherName">
		<property name="size" value="80"/>
		<property name="labelField" value="name"/>
		<property name="rawSlotName" value="responsibleName"/>
		<property name="format" value="${name}"/>
		<property name="indicatorShown" value="true"/>
		<property name="serviceName" value="SearchEmployeesAndTeachers"/>
		<property name="serviceArgs" value="slot=name"/>
		<property name="minChars" value="3"/>
		<property name="errorStyleClass" value="error0"/>
	</slot>
	<slot name="searchPerson" key="label.responsibleFor" layout="radio-postback">
        <property name="trueLabel" value="label.employee"/>
        <property name="falseLabel" value="label.unit"/>
        <property name="destination" value="changeSearchPerson"/>
        <property name="classes" value="nobullet liinline"/>
    </slot>
</schema>

<schema name="assiduousnessStructureSearch.employee" type="net.sourceforge.fenixedu.dataTransferObject.directiveCouncil.assiduousnessStructure.AssiduousnessStructureSearch">
	<slot name="employee" key="label.employee" layout="autoComplete">
		<property name="size" value="80"/>
		<property name="labelField" value="person.name"/>
		<property name="format" value="${person.name}"/>
		<property name="indicatorShown" value="true"/>		
		<property name="serviceName" value="SearchActiveEmployeeAssiduousness"/>
		<property name="serviceArgs" value="slot=person.name"/>
		<property name="minChars" value="2"/>
		<property name="maxCount" value="100"/>
		<property name="errorStyleClass" value="error0"/>
	</slot>
</schema>

<schema name="assiduousnessStructureSearch.unit" type="net.sourceforge.fenixedu.dataTransferObject.directiveCouncil.assiduousnessStructure.AssiduousnessStructureSearch">
	<slot name="unit" key="label.unit" layout="autoComplete">
		<property name="size" value="80"/>
		<property name="labelField" value="unit.name"/>		
		<property name="rawSlotName" value="unitName"/>
		<property name="format" value="${unit.presentationName}"/>
		<property name="indicatorShown" value="true"/>		
		<property name="serviceName" value="SearchInternalUnits"/>	
		<property name="serviceArgs" value="slot=name"/>		
		<property name="minChars" value="3"/>
		<property name="errorStyleClass" value="error0"/>
	</slot>
</schema>

