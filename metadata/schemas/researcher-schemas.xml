<schema bundle="RESEARCHER_RESOURCES" name="patent-default" type="net.sourceforge.fenixedu.domain.research.result.Patent">
	<slot name="authorships" layout="tabular-list" schema="result.authors"/>
	<slot name="title" validator="net.sourceforge.fenixedu.presentationTier.renderers.validators.RequiredMultiLanguageStringValidator"/> 
	<slot name="description" layout="area">
		<property name="rows" value="5"/>
		<property name="columns" value="75"/>
	</slot>
	<slot name="type"/>
	<slot name="status"/>
	<slot name="registrationDate" layout="year-month" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator"/>
	<slot name="approvalDate" layout="year-month" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator"/>
	<slot name="country" layout="menu-select">
		<property name="choiceType" value="net.sourceforge.fenixedu.domain.Country"/> 
		<property name="format" value="${name}"/>
		<property name="sortBy" value="name"/>
	</slot>
	<slot name="local"/>
	<slot name="patentNumber"/>
	<slot name="numberPages"/>	
	<slot name="format"/>	
	<slot name="language"/>
	<slot name="url"/>
</schema>

<schema bundle="RESEARCHER_RESOURCES" name="patent.create" extends="patent-default" type="net.sourceforge.fenixedu.domain.research.result.Patent">
	<remove name="authorships"/>
</schema>

<schema bundle="RESEARCHER_RESOURCES" name="patent.details" extends="patent-default" type="net.sourceforge.fenixedu.domain.research.result.Patent">
	<remove name="authorships"/>	
	<slot name="description"/>
	<slot name="country" layout="format">
		<property name="format" value="${name}"/>
	</slot>
</schema>

<schema bundle="RESEARCHER_RESOURCES" name="patents.resume.list" type="net.sourceforge.fenixedu.domain.research.result.Patent">
	<slot name="title" layout="link">
		<property name="viewPage" value="/result/patents/patentsManagement.do?method=preparePatentDetails"/>
	</slot>
	<slot name="registrationDate"/>
</schema>

<schema name="result.authors" type="net.sourceforge.fenixedu.domain.Person" bundle="RESEARCHER_RESOURCES">
