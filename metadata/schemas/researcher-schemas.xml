	<slot name="username" read-only="true"/>
</schema>

<schema name="projectParticipation.simpleCreation" type="net.sourceforge.fenixedu.dataTransferObject.research.ProjectParticipantSimpleCreationBean" bundle="RESEARCHER_RESOURCES">
	<slot name="person" layout="autoComplete" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator">
		<property name="size" value="50"/>
		<property name="rawSlotName" value="personName"/>
		<property name="labelField" value="name"/>
		<property name="serviceName" value="SearchObjects"/>
		<property name="serviceArgs" value="slot=name"/>
		<property name="className" value="net.sourceforge.fenixedu.domain.Person"/>				
		<property name="minChars" value="5"/>
	</slot>
	<slot name="role" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator"/>
</schema>

<schema name="projectParticipation.fullCreation" type="net.sourceforge.fenixedu.dataTransferObject.research.ProjectParticipantFullCreationBean" bundle="RESEARCHER_RESOURCES">
	<slot name="personName" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator" read-only="true"/>
	<slot name="organization" layout="autoComplete" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator">
		<property name="size" value="40"/>
		<property name="rawSlotName" value="organizationName"/>
		<property name="labelField" value="name"/>
		<property name="serviceName" value="SearchObjects"/>
		<property name="serviceArgs" value="slot=name"/>
		<property name="className" value="net.sourceforge.fenixedu.domain.organizationalStructure.Unit"/>				
		<property name="minChars" value="5"/>
	</slot>
	<slot name="role" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator"/>
</schema>