<schema name="executionCourseForum.view.nameOnly" type="net.sourceforge.fenixedu.domain.messaging.ExecutionCourseForum">
	<slot name="name"/>
</schema>

<schema name="forum.view-with-topics-and-message-count" type="net.sourceforge.fenixedu.domain.messaging.Forum">
	<slot name="name" key="label.net.sourceforge.fenixedu.domain.messaging.Forum.name"/>
	<slot name="description" key="label.net.sourceforge.fenixedu.domain.messaging.Forum.description"/>
	<slot name="conversationThreadsCount" key="label.forum.totalConversationThreads"/>
	<slot name="conversationMessagesCount" key="label.forum.totalConversationMessages"/>
</schema>

<schema name="conversationThread.create" type="net.sourceforge.fenixedu.domain.messaging.ConversationThread">
	<slot name="subject" key="label.net.sourceforge.fenixedu.domain.messaging.ConversationThread.subject" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator" />
</schema>

<schema name="conversationThread.view-full" type="net.sourceforge.fenixedu.domain.messaging.ConversationThread">
   	<slot name="subject" key="label.net.sourceforge.fenixedu.domain.messaging.ConversationThread.subject"/>
   	<slot name="creator" key="label.net.sourceforge.fenixedu.domain.messaging.ConversationThread.creator" layout="person-email-identity">
		<property name="collapsed" value="true"/>
		<property name="text" value="name"/>
		<property name="address" value="email"/>
	</slot>
   	<slot name="creationDate" key="label.net.sourceforge.fenixedu.domain.messaging.ConversationThread.creationDate">
		<property name="format" value="dd/MM/yyyy HH:mm:ss" />
	</slot>
</schema>

<schema name="conversationThreadAndMessage.create" type="net.sourceforge.fenixedu.domain.messaging.ConversationMessage">
   	<slot name="conversationThread.subject" key="label.net.sourceforge.fenixedu.domain.messaging.ConversationThread.name" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator"/>
   	<slot name="body" layout="longText" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator">
 		<property name="columns" value="60"/>
   		<property name="rows" value="10"/>
   	</slot>
</schema>

<schema name="conversationMessage.create" type="net.sourceforge.fenixedu.domain.messaging.ConversationMessage">
   	<slot name="body" layout="longText" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator">
   		<property name="columns" value="60"/>
   		<property name="rows" value="10"/>
   	</slot>
</schema>


<schema name="forum.view-with-name-description-and-creation-date" type="net.sourceforge.fenixedu.domain.messaging.Forum">
	<slot name="name" key="label.net.sourceforge.fenixedu.domain.messaging.Forum.name"/>
	<slot name="description" key="label.net.sourceforge.fenixedu.domain.messaging.Forum.description"/>
	<slot name="creationDate" key="label.net.sourceforge.fenixedu.domain.messaging.Forum.creationDate"/>
</schema>

<schema name="conversationThread.view-with-subject-creation-date-and-message-count" type="net.sourceforge.fenixedu.domain.messaging.Forum">
	<slot name="subject" key="label.net.sourceforge.fenixedu.domain.messaging.ConversationThread.name"/>
	<slot name="creationDate" key="label.net.sourceforge.fenixedu.domain.messaging.ConversationThread.creationDate"/>
	<slot name="conversationMessagesCount" key="label.forum.totalConversationMessages"/>	
</schema>

<schema name="conversationMessage.view-with-author-creationDate-and-body" type="net.sourceforge.fenixedu.domain.messaging.ConversationMessage">
	<slot name="creator" key="label.net.sourceforge.fenixedu.domain.messaging.ConversationMessage.creator" layout="person-email-identity">
		<property name="collapsed" value="false"/>
		<property name="text" value="name"/>
		<property name="address" value="email"/>
	</slot>
	<slot name="creationDate" key="label.net.sourceforge.fenixedu.domain.messaging.ConversationMessage.creationDate"/>
	<slot name="body" key="label.net.sourceforge.fenixedu.domain.messaging.ConversationMessage.body"/>	
</schema>
