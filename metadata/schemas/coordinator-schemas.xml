<schema name="coordinator.thesis.file" type="net.sourceforge.fenixedu.domain.thesis.ThesisFile">
    <slot name="displayName" layout="link" key="label.thesis.file.name">
        <property name="userParent" value="true"/>
        <property name="linkFormat" value="${donwloadUrl}"/>
    </slot>
    <slot name="size" layout="fileSize" key="label.thesis.file.size"/>
    <slot name="uploadTime" key="label.thesis.file.name.uploadTime"/>
</schema>

<schema name="coordinator.thesis.evaluate" type="net.sourceforge.fenixedu.domain.thesis.Thesis">
    <slot name="mark" key="label.thesis.evaluate.mark">
        <validator class="net.sourceforge.fenixedu.presentationTier.renderers.validators.GradeValidator">
            <property name="required" value="true"/>
        </validator>
    </slot>
    <slot name="discussed" key="label.thesis.evaluate.discussion.date" validator="net.sourceforge.fenixedu.presentationTier.renderers.validators.DateTimeValidator">
        <validator class="net.sourceforge.fenixedu.presentationTier.renderers.validators.DateTimeValidator">
            <property name="required" value="true"/>
        </validator>
    </slot>
    <setter signature="confirm(mark, discussed)"/>
</schema>
