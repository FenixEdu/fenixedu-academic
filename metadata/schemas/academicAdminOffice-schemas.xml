<schema name="student.address-edit" type="net.sourceforge.fenixedu.dataTransferObject.person.PersonBean" bundle="ACADEMIC_OFFICE_RESOURCES" >
	<slot name="address" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator" />
	<slot name="area" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator" />
	<slot name="areaCode">
		 <validator class="net.sourceforge.fenixedu.renderers.validators.RegexpValidator">
            <property name="regexp" value="\d{4}-\d{3}"/>
            <property name="message" value="error.areaCode.invalidFormat"/>
            <property name="key" value="true"/>
        </validator>
	</slot>
	<slot name="areaOfAreaCode" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator" />
	<slot name="parishOfResidence" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator" />
	<slot name="districtSubdivisionOfResidence" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator" />
	<slot name="districtOfResidence" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator" />
	<slot name="countryOfResidence" layout="menu-select" validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator" >
		<property name="providerClass" value="net.sourceforge.fenixedu.presentationTier.renderers.providers.DistinctCountriesProvider" />
		<property name="format" value="${name}"/>
		<property name="sortBy" value="name"/>		
	</slot>	
</schema>

