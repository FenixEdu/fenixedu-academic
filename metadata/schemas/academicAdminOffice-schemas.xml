<schema name="student.precedentDegreeInformation-edit" type="net.sourceforge.fenixedu.dataTransferObject.candidacy.PrecedentDegreeInformationBean" bundle="ACADEMIC_OFFICE_RESOURCES" >
	<slot name="degreeDesignation" >
    	<property name="size" value="50"/>
		<property name="maxLength" value="255"/>
    </slot>
	<slot name="conclusionGrade" >
    	<property name="size" value="2"/>
		<property name="maxLength" value="2"/>
		<validator class="net.sourceforge.fenixedu.renderers.validators.RegexpValidator">
            <property name="regexp" value="(\d{2}|)"/>
            <property name="message" value="error.conclusionGrade.invalidFormat"/>
            <property name="key" value="true"/>
        </validator>
	</slot>
    <slot name="conclusionYear">
       	<property name="size" value="4"/>
		<property name="maxLength" value="4"/>
        <validator class="net.sourceforge.fenixedu.renderers.validators.RegexpValidator">
            <property name="regexp" value="(\d{4}|)"/>
            <property name="message" value="error.conclusionYear.invalidFormat"/>
            <property name="key" value="true"/>
        </validator>
    </slot>
	<slot name="institution" layout="autoComplete" >
		<property name="size" value="40"/>
		<property name="labelField" value="name"/>
		<property name="indicatorShown" value="true"/>		
		<property name="serviceName" value="SearchExternalUnits"/>
		<property name="serviceArgs" value="slot=name"/>
		<property name="className" value="net.sourceforge.fenixedu.domain.organizationalStructure.Unit"/>				
		<property name="minChars" value="2"/>
		<property name="rawSlotName" value="institutionName"/>
	</slot>		
	<slot name="country" layout="menu-select" key="label.countryOfPrecedenceDegree" > 
		<property name="format" value="${name}"/>
		<property name="sortBy" value="name=asc" />
		<property name="providerClass" value="net.sourceforge.fenixedu.presentationTier.renderers.providers.DistinctCountriesProvider" />
	</slot>	
</schema>

