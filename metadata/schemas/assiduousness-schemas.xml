<schema name="show.employeePersonalInformation2"
	type="net.sourceforge.fenixedu.domain.Employee">
	<slot name="employeeNumber" key="label.employeeNumber" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="person.name" key="label.employee.name" bundle="ASSIDUOUSNESS_RESOURCES"/>
</schema>

<schema name="show.employeeInformation"
	type="net.sourceforge.fenixedu.domain.Employee">
	<slot name="person" schema="show.employeePersonalInformation"
		layout="values-dash" key="label.employee" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="currentWorkingPlace" schema="show.employeeUnit"
		layout="values-dash" key="label.unit" bundle="ASSIDUOUSNESS_RESOURCES"/>
</schema>

<schema name="show.employeePersonalInformation"
	type="net.sourceforge.fenixedu.domain.Person">
	<slot name="employee.employeeNumber" key="label.employeeNumber" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="name" key="label.employee.name" bundle="ASSIDUOUSNESS_RESOURCES"/>
</schema>

<schema name="show.employeeUnit"
	type="net.sourceforge.fenixedu.domain.organizationalStructure.Unit">
	<slot name="costCenterCode" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="name" bundle="ASSIDUOUSNESS_RESOURCES"/>
</schema>

<schema name="show.workDaySheet"
	type="net.sourceforge.fenixedu.dataTransferObject.assiduousness.WorkDaySheet">
	<slot name="date.dayOfMonth" key="label.day" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="weekDay" key="label.weekDay" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="workScheduleAcronym" key="label.schedule" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="balanceTimeFormatted" key="label.balance" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="unjustifiedTimeFormatted" key="label.unjustified" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="notes" key="label.notes" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="clockingsFormatted" key="link.clockings" bundle="ASSIDUOUSNESS_RESOURCES"/>
</schema>

<schema name="show.clockingsDaySheet"
	type="net.sourceforge.fenixedu.dataTransferObject.assiduousness.ClockingsDaySheet">
	<slot name="date.dayOfMonth" key="label.day" />
	<slot name="weekDay" key="label.weekDay" bundle="ASSIDUOUSNESS_RESOURCES"/>	
	<slot name="clockings" layout="flowLayout"
		key="label.clockings/Units" bundle="ASSIDUOUSNESS_RESOURCES">
		<property name="eachLayout" value="values" />
		<property name="htmlSeparator" value="," />
		<property name="eachSchema" value="show.clocking" />
	</slot>
</schema>

<schema name="show.clocking"
	type="net.sourceforge.fenixedu.domain.assiduousness.Clocking">
	<slot name="timeOfDay">
		<property name="format" value="HH:mm" />
	</slot>
	<slot name="clockUnit" schema="show.clockUnit" layout="values" >
		<property name="classes" value="lowlight1" />
	</slot>
</schema>

<schema name="show.clockUnit"
	type="net.sourceforge.fenixedu.domain.assiduousness.ClockUnit">
	<slot name="acronym" key="label.clockUnit" bundle="ASSIDUOUSNESS_RESOURCES"/>
</schema>


<schema name="show.justifications"
	type="net.sourceforge.fenixedu.domain.assiduousness.Justification">
	<slot name="partialDate" key="label.beginDate" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="partialEndDate" key="label.endDateOrDuration" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="justificationMotive.description"
		key="label.justification" bundle="ASSIDUOUSNESS_RESOURCES"/>
</schema>

<schema name="choose.date"
	type="net.sourceforge.fenixedu.dataTransferObject.assiduousness.YearMonth">
	<slot name="year"
		validator="net.sourceforge.fenixedu.renderers.validators.NumberValidator"  bundle="ASSIDUOUSNESS_RESOURCES">
		<property name="maxLength" value="4" />
		<property name="size" value="4" />
	</slot>
	<slot name="month" layout="menu-select"
		validator="net.sourceforge.fenixedu.renderers.validators.RequiredValidator"  bundle="ASSIDUOUSNESS_RESOURCES">
		<property name="choiceType"
			value="net.sourceforge.fenixedu.util.Month" />
		<property name="eachLayout" value="this-does-not-exist" />
	</slot>
</schema>

<schema name="show.justificationMotives"
	type="net.sourceforge.fenixedu.domain.assiduousness.JustificationMotive">
	<slot name="acronym" key="label.acronym" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="description" key="label.description" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="justificationType" key="label.type" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="dayType" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="justificationGroup" key="label.group" bundle="ASSIDUOUSNESS_RESOURCES"/>		
</schema>

<schema name="show.regularizationMotives"
	type="net.sourceforge.fenixedu.domain.assiduousness.JustificationMotive">
	<slot name="acronym" key="label.acronym" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="description" key="label.description" bundle="ASSIDUOUSNESS_RESOURCES"/>
</schema>

<schema name="show.workScheduleType" type="net.sourceforge.fenixedu.domain.assiduousness.WorkScheduleType">
	<slot name="acronym" key="label.acronym" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="normalWorkPeriod" key="label.normalWorkPeriod" schema="show.WorkPeriod" layout="values" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="fixedWorkPeriod" key="label.fixedWorkPeriod" schema="show.WorkPeriod" layout="values" bundle="ASSIDUOUSNESS_RESOURCES"/>
	<slot name="meal" key="label.mealPeriod" schema="show.MealBreak" layout="values" bundle="ASSIDUOUSNESS_RESOURCES"/>
</schema>

<schema name="show.WorkPeriod"
	type="net.sourceforge.fenixedu.domain.assiduousness.WorkPeriod">
	<slot name="firstPeriod">
		<property name="format" value="HH:mm " />
	</slot>
	<slot name="endFirstPeriod">
		<property name="format" value="'-' HH:mm" />
	</slot>
	<slot name="secondPeriod">
		<property name="format" value=" 'e' HH:mm " />
	</slot>
	<slot name="endSecondPeriod">
		<property name="format" value="'-' HH:mm" />
	</slot>
</schema>

<schema name="show.MealBreak"
	type="net.sourceforge.fenixedu.domain.assiduousness.Meal">
	<slot name="beginMealBreak">
		<property name="format" value="HH:mm " />
	</slot>
	<slot name="endMealBreak">
		<property name="format" value="'-' HH:mm " />
	</slot>
	<slot name="minimumMealBreakInterval">
		<property name="format" value="'(min:' HH:mm" />
	</slot>
	<slot name="mandatoryMealDiscount">
		<property name="format" value="' - obr: 'HH:mm)" />
	</slot>
</schema>