	<modelVersion>4.0.0</modelVersion>
	<groupId>pt.ist</groupId>
	<artifactId>fenix</artifactId>
	<packaging>war</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>Fenix Webapp</name>
	<url>http://fenix-ashes.ist.utl.pt</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.build.timestamp.format>yyyy/MM/dd HH:mm:ss</maven.build.timestamp.format>
		<buildNumber>${maven.build.timestamp}</buildNumber>
		<jasper.threads>2</jasper.threads>
		<skipTests>true</skipTests>
	</properties>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
				<excludes>
					<exclude>build.version</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>build.version</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/webapp/images</directory>
				<targetPath>${project.build.outputDirectory}/images</targetPath>
				<filtering>false</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<filesets>
						<fileset>
							<directory>deploy</directory>
						</fileset>
						<fileset>
							<directory>${basedir}</directory>
							<includes>
								<include>.checkedAnnotationLog</include>
								<include>.serviceAnnotationLog</include>
							</includes>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>antlr-maven-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<grammars>groups-language.g</grammars>
				</configuration>
				<executions>
					<execution>
						<phase>process-resources</phase>
						<goals>
							<goal>generate</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.5.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<fork>true</fork>
					<annotationProcessors>
						<annotationProcessor>pt.ist.fenixWebFramework.services.ServiceAnnotationProcessor</annotationProcessor>
						<annotationProcessor>pt.ist.fenixWebFramework.security.accessControl.CheckedAnnotationProcessor</annotationProcessor>
						<annotationProcessor>pt.ist.fenixWebFramework.struts.annotations.ActionAnnotationProcessor</annotationProcessor>
					</annotationProcessors>
					<maxmem>2048</maxmem>
					<meminitial>1536</meminitial>
				</configuration>
			</plugin>
			<plugin>
				<groupId>dml</groupId>
				<artifactId>dml-maven-plugin</artifactId>
				<version>1.2.2</version>
				<executions>
					<execution>
						<goals>
							<goal>generate-domain</goal>
							<goal>post-compile</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>pt.ist</groupId>
				<artifactId>fenix-maven-plugin</artifactId>
				<version>1.0.0</version>
				<executions>
					<execution>
						<id>fenix-process-classes</id>
						<goals>
							<goal>post-compile</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.alexnederlof</groupId>
				<artifactId>jasperreports-plugin</artifactId>
				<version>1.5.0</version>
				<executions>
					<execution>
						<phase>compile</phase>
						<goals>
							<goal>jasper</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>net.sf.jasperreports</groupId>
						<artifactId>jasperreports</artifactId>
						<version>3.6.0</version>
					</dependency>
					<dependency>
						<groupId>log4j</groupId>
						<artifactId>log4j</artifactId>
						<version>1.2.16</version>
					</dependency>
				</dependencies>
				<configuration>
					<compiler>de.enovationbtc.jasperreport.JRJavacCompiler</compiler>
					<outputDirectory>${project.build.outputDirectory}/reports</outputDirectory>
					<numberOfThreads>${jasper.threads}</numberOfThreads>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>properties-maven-plugin</artifactId>
				<version>1.0-alpha-2</version>
				<executions>
					<execution>
						<phase>initialize</phase>
						<goals>
							<goal>read-project-properties</goal>
						</goals>
						<configuration>
							<files>
								<file>src/main/resources/configuration.properties</file>
							</files>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<version>8.1.10.v20130312</version>
				<configuration>
					<reload>manual</reload>
					<stopKey>foo</stopKey>
					<stopPort>9999</stopPort>
					<encoding>UTF-8</encoding>
					<webApp>
						<contextPath>/fenix</contextPath>
					</webApp>
					<scanTargets>
						<scanTarget>src/main/webapp</scanTarget>
					</scanTargets>
					<war>${project.build.directory}/${project.build.finalName}</war>
				</configuration>
			</plugin>
		</plugins>
	</build>


