		    token="@ftp.IST.server.user@" 
		    property="ftp.IST.server.user"/>
		  <replacefilter 
		    token="@ftp.IST.server.pass@" 
		    property="ftp.IST.server.pass"/>
		  <replacefilter 
		    token="@ftp.IST.server.address@" 
		    property="ftp.IST.server.address"/>
