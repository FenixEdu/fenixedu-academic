			<include name="**/**/logAnalyser.properties"/>
			<include name="index.html"/>
			<include name="**/degreeAdministrativeOffice/enrolment/withRules/*.jsp"/>
            <include name="**/student/enrollment/warning.jsp"/>
			<include name="**/**/*.jsp"/>
			<replacefilter token="&lt;!-- @validation.doctype@ -->"
						   property="validation.doctype"/>
