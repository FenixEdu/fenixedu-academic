			<form-property name="degreeCurricularPlanId" type="java.lang.String"/>
			<form-property name="startDate" type="java.lang.String"/>
			<form-property name="enrollmentIDsToTransfer" type="java.lang.String[]"/>
			<form-property name="selectedCurriculumGroupID" type="java.lang.Integer"/>
		</form-bean>
		
		<form-bean name="createClassificationsForm"
				type="org.apache.struts.validator.DynaValidatorForm"
				dynamic="true">
