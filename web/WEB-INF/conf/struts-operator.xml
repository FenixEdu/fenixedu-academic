					key="student.curricular.plan.already.exists"
					handler="net.sourceforge.fenixedu.presentationTier.config.FenixErrorExceptionHandler"/>
			<exception type="net.sourceforge.fenixedu.domain.exceptions.DomainException"
					key="error.enrolmentEvaluation.cannot.be.deleted"
					handler="net.sourceforge.fenixedu.presentationTier.config.FenixErrorExceptionHandler"/>
			<forward name="show" path="show-student-curricular-plan"/>
			<forward name="createStudentCurricularPlan" path="create-student-curricular-plan"/>
			<forward name="transferEnrollments" path="transfer-enrollments"/>
		</action>
		
		<!-- Inquiries -->     
		<action path="/createClassificationsForStudents"
				parameter="method"
				name="createClassificationsForm"
				type="net.sourceforge.fenixedu.presentationTier.Action.manager.inquiries.CreateClassificationsForStudentsDispatchAction"
				scope="request">
			<forward name="chooseDegreeCurricularPlan" path="chooseDegreeCurricularPlan"/>
		</action>
		
		<!-- ================== TEACHERS MANAGEMENT ======================-->
		<action path="/teachersManagement"
				type="net.sourceforge.fenixedu.presentationTier.Action.manager.teachersManagement.TeachersManagementAction"
				parameter="method"
				name="teacherManagementForm"
				scope="request"
				validate="true"
				input="/teachersManagement.do?method=prepareDissociateEC&amp;page=0">

			<forward name="firstPage" path="df.teacherManagement.firstPage"/>
			<forward name="mainPage" path="df.page.main-page"/>
		</action>
		
		<action path="/teacherCategoriesManagement"
				type="net.sourceforge.fenixedu.presentationTier.Action.manager.teachersManagement.TeacherCategoriesManagement"
				parameter="method"
				scope="request">
			<forward name="editCategories" path="df.page.editCategories"/>
		</action>
		
		<action path="/dissociateProfShipsAndRespFor"
				type="net.sourceforge.fenixedu.presentationTier.Action.manager.teachersManagement.DissociateProfShipsAndRespForDispatchAction"
				parameter="method"
				name="teacherManagementForm"
				scope="request"
				validate="true"
				input="/dissociateProfShipsAndRespFor.do?method=prepareDissociateEC&amp;page=0">
			<forward name="prepareDissociateEC" path="df.page.prepareDissociateEC"/>
			<forward name="prepareDissociateECShowProfShipsAndRespFor" path="df.page.prepareDissociateECShowProfShipsAndRespFor"/>
		</action>
		
		<!-- ========== EXECUTION PERIOD MANIPULATION ========== -->
      	<action path="/manageExecutionPeriods"
				type="net.sourceforge.fenixedu.presentationTier.Action.manager.ManageExecutionPeriodsDA"
				parameter="method" scope="request">
			<forward name="Manage" path="df.page.manage-execution-periods" />
			<forward name="EditExecutionPeriod" path="edit-execution-period" />
		</action>
		
		<action path="/manageEnrolementPeriods"
				parameter="method"
				validate="true"
