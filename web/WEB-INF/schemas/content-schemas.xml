        	<property name="destination" value="portal.view"/>
        	<property name="useParent" value="true"/>
        </slot>
</schema>  

<schema name="contents.create.portal"    
	   type="net.sourceforge.fenixedu.domain.contents.Portal"
	   bundle="CONTENT_RESOURCES">
        <slot name="name"/>
