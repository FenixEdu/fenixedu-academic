<!-- Definitions for Dominio.PersonAccount -->
<!-- ******************************************************************************************************************************* -->
<class-descriptor class="Dominio.PersonAccount" table="PERSON_ACCOUNT">
	
	<field-descriptor
		name="idInternal"
		column="ID_INTERNAL"
        jdbc-type="INTEGER"
        primarykey="true"
        autoincrement="true"
    />
	
	<field-descriptor
	   	name="ackOptLock"
      	column="ACK_OPT_LOCK"
      	jdbc-type="INTEGER"
      	locking="true"
	/>
	
	<field-descriptor
	   	name="balance"
      	column="BALANCE"
      	jdbc-type="DOUBLE"
	/>
			
	<field-descriptor 
	    name="keyPerson"
	    column="KEY_PERSON"
	    jdbc-type="INTEGER"
	/>
	
	<reference-descriptor
       	name="person"
       	class-ref="Dominio.Pessoa"
       	proxy="true"
		refresh="true"
    >
		<foreignkey field-ref="keyPerson"/>
	</reference-descriptor>
	
	<collection-descriptor
		name="transactions"
		element-class-ref="Dominio.transactions.Transaction"
		refresh="true"
		auto-retrieve="true"
		auto-update="false"
		auto-delete="false"
		proxy="true">
		<inverse-foreignkey field-ref="keyPersonAccount"/>
	 </collection-descriptor>   
		
</class-descriptor>

