<schema name="teacher.viewStudentsByTutor" bundle="APPLICATION_RESOURCES" type="net.sourceforge.fenixedu.domain.Tutorship">
	<slot name="studentCurricularPlan.registration" key="label.studentNumber" layout="link">
		<property name="contextRelative" value="true"/>
		<property name="moduleRelative" value="true"/>
		<property name="blankTarget" value="true"/>
		<property name="linkFormat" value="/viewStudentCurriculum.do?method=prepare&amp;registrationOID=${externalId}"/>	
		<property name="subLayout" value="values"/>
		<property name="subSchema" value="registration.number"/>
	</slot>
	<slot name="studentCurricularPlan.person.name" key="label.name" />
	<slot name="studentCurricularPlan.registration.startExecutionYear.year" key="label.entryYear" />
	<slot name="studentCurricularPlan.registration.degree.sigla" key="label.degreeCurricularPlan.degree.sigla" />
	<slot name="studentCurricularPlan.person.phone" key="label.phone" />
	<slot name="studentCurricularPlan.registration.studentCandidacy.dislocatedFromPermanentResidence" key="label.dislocatedFromPermanentResidence" />
	<slot name="studentCurricularPlan.person" key="label.email" layout="link">
		<property name="linkFormat" value="mailto:${institutionalOrDefaultEmailAddressValue}"/>
		<property name="subLayout" value="values" />
		<property name="subSchema" value="teacher.person.email" />
	</slot>
	<slot name="endDate" key="label.tutorship.endDate"/>
</schema>

<schema name="teacher.person.email" bundle="APPLICATION_RESOURCES" type="net.sourceforge.fenixedu.domain.Person">
