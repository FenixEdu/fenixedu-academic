			<property name="bundle" value="APPLICATION_RESOURCES"/>
			<property name="commentLocation" value="top"/>
			<property name="comment" value="support.form.priority.help"/>
			<property name="commentClasses" value="smalltxt color555"/>
		</slot>
	</schema>

