		<property name="label" value="-"/>
	</slot>	
	<slot name="lastPaymentDate" key="label.paymentDate" layout="null-as-label">
		<property name="subLayout" value="no-time"/>
		<property name="label" value="-"/>
	</slot>	
</schema>

